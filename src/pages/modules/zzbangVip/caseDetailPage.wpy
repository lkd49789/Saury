                                <view>{{caseDetailData.Name||'未填写'}}</view>
                            </view>
                        </view>
                        <view class="diplay-flex">
                            <view class="flex-column-1">
                                <view>手机号</view>
                                <view>{{caseDetailData.PhoneNumber||'未填写'}}</view>
                            </view>
                            <view class="flex-column-1">
