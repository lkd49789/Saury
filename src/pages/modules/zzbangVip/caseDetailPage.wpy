                    </view>
                </view>
            </view>
            <view class="block block-item" >
                <view class="debtorInfo">
                    <view>债务人信息</view>
                    <view wx:if="{{PlatformMemberId.length!==0}}">
                        <view class="diplay-flex">
                            <view class="flex-column-1">
