            <view  class="block-item" wx:if="{{isShowCaseQR}}">
                <view class="QRCode">
                    <view>
                        <image src="{{caseQRCodeUrl}}" mode="scaleToFill"
                        lazy-load="false"  style="width:250rpx;height:250rpx;" @tap="PreviewQRcode"/>
                    </view>
