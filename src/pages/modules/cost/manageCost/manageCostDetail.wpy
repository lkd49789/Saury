    .bill {
        .flex{
            display: flex;
            justify-content: space-between;
        }
        .main{
            margin-top:119rpx;
        }
        .bill_content {
            // &:last-child{
            //     border:0;
            // }
            background: #ffffff;
            margin: 0 auto;
            padding: 30rpx 28rpx;
            font-size: 28rpx;
            overflow: auto;
            border-bottom: 20rpx solid #f2f2f2;
            .bill_gray{
                color: #7a7a7a;
            }
            .bill_yellow{
                color: #ff9900;
            }
            .bill_gary{
                color: #38a633;
            }
            .bill_box {
                .bill_view {
                    line-height: 42rpx;
                    margin-bottom: 20rpx;
                }
                .bill_blue{
                    color: #3EB5ff;
                }
            }
        }
        .workflows{
            box-shadow: 0rpx 8rpx 30rpx 0rpx rgba(65, 98, 213, 0.25);
