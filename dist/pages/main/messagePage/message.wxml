
    <view class="container">
        <view class="pageTitle">
            <text>消息</text>
            <view class="titleIcon">
                <!-- <icon class="iconfont icon-xiaoxileixingfenlei" style="margin-right:20rpx"></icon> -->
                <icon class="iconfont icon-quanxuan" bindtap="showTools"/>
            </view>
        </view>
        <view class="messages-list" style="margin-bottom:{{showTools?'148rpx':'44rpx'}}">
            <block wx:for="{{GetUserNotifications_data}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view class="msg-item">
                    <view class="item-checkbox"  wx:if="{{showTools}}">
                        <checkbox value="{{item.name}}" checked="{{isDisabled[index]}}" color="#5d73fa" catchtap="sign" data-wpysign-a="{{item.id}}" data-wpysign-b="{{index}}" data-wpysign-c="{{item.state}}"/>
                    </view>
                    <view class="item-content" bindlongpress="deleteNotification" data-wpydeletenotification-a="{{item.id}}" data-wpydeletenotification-b="{{index}}">
                        <view>
                            <image src="{{EmployeePhoto[index]}}" mode="scaleToFill" lazy-load="false"/>
                        </view>
                        <view bindtap="jump_page" data-wpyjump_page-a="{{item}}" data-wpyjump_page-b="{{index}}">
                            <view>
                                <text>{{item.TextTile}}</text>
                                <text style="color:#7a7a7a">{{item.notification.creationTime}}</text>
                            </view>
                            <text style="color:#7a7a7a">{{item.notification.data.message}}</text>
                        </view>
                        <view class="signed"  wx:if="{{item.state==1}}" bindtap="jump_page" data-wpyjump_page-a="{{item}}" data-wpyjump_page-b="{{index}}"/>
                    </view>
                </view>
            </block>
        </view>
        <view class="msg-tools {{showTools?'animation':''}}" wx:if="{{showTools}}">
            <view bindtap="all_checked" style="color:#5d73fa">
                <text wx:if="{{!all_checked}}">全选</text>
                <text wx:else="{{!all_checked}}">取消全选</text>
            </view>
            <view style="color:{{show_sign?'#5d73fa':'#7a7a7a'}}" bindtap="isAllComlated"> <text>已读</text></view>
            <view style="color:{{delet_id.length!==0?'#e20000':'#7a7a7a'}}" bindtap="DeleteUserNotifications"> <text>删除</text></view>
        </view>
        
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

    </view>