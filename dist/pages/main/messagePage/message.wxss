@import "./../../../components/placeHolderImage.wxss";
.container .pageTitle {
  height: 104rpx;
  font-size: 48rpx;
  color: #2a2a2a;
  line-height: 104rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 9999;
  padding-left: 28rpx;
}
.container .pageTitle .titleIcon {
  margin-right: 28rpx;
  padding-right: 28rpx;
  display: flex;
}
.container .pageTitle .titleIcon > icon {
  color: #5d73fa;
  font-size: 60rpx;
}
.container .messages-list {
  margin-top: 149rpx;
}
.container .messages-list > view:not(:first-child) {
  margin-top: 44rpx;
}
.container .messages-list .msg-item {
  display: flex;
  align-items: center;
}
.container .messages-list .msg-item .item-checkbox {
  margin-left: 28rpx;
}
.container .messages-list .msg-item .item-content {
  margin: 0 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
  width: 100%;
  position: relative;
}
.container .messages-list .msg-item .item-content .signed {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  opacity: 0.6;
}
.container .messages-list .msg-item .item-content > view:first-child {
  width: 15%;
  margin-right: 20rpx;
}
.container .messages-list .msg-item .item-content > view:first-child > image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.container .messages-list .msg-item .item-content > view:nth-child(2) {
  width: 85%;
  display: flex;
  flex-direction: column;
}
.container .messages-list .msg-item .item-content > view:nth-child(2) > view {
  margin-bottom: 14rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .msg-tools {
  height: 104rpx;
  line-height: 104rpx;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 9999;
  font-size: 34rpx;
  padding-right: 28rpx;
}
.container .msg-tools > view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
@keyframes showTools {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.container .animation {
  animation: showTools 1s linear;
}
