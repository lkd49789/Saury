.body .swiper-view swiper .swiper-item {
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  align-items: center;
  justify-content: center;
  margin: 44rpx 20rpx;
  padding: 30rpx 0;
  background: #ffffff;
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
}
.body .swiper-view swiper .swiper-item > view:first-child {
  font-size: 48rpx;
  color: #5d73fa;
  margin-bottom: 14rpx;
}
.body .swiper-view swiper .swiper-item > view:nth-child(2) {
  font-size: 32rpx;
  color: #7a7a7a;
  margin-bottom: 20rpx;
}
.body .swiper-view swiper .swiper-item > view:nth-child(3) {
  margin-bottom: 14rpx;
}
.body .swiper-view swiper .swiper-item > view:nth-child(4) {
  display: flex;
  justify-content: space-between;
}
.body .swiper-view swiper .swiper-item > view:nth-child(4) > view:first-child {
  margin-right: 30rpx;
}
.body .function {
  padding: 10rpx 28rpx 0 28rpx;
}
.body .function .auditFuntion swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.body .function .auditFuntion swiper-item .swiper-item {
  position: relative;
}
.body .function .auditFuntion swiper-item .swiper-item > image {
  height: 182rpx;
  width: 180rpx;
}
.body .function .auditFuntion swiper-item .swiper-item > view {
  color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
}
.body .function .Notifications {
  display: flex;
  border-radius: 20rpx;
  align-items: center;
  justify-content: space-between;
  margin: 44rpx 20rpx;
  padding: 30rpx 0;
  box-shadow: 0px 6px 20px rgba(65, 98, 213, 0.25);
}
.body .function .Notifications .tishi {
  margin-left: 28rpx;
  margin-right: 20rpx;
}
.body .function .Notifications .notData {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #7a7a7a;
}
.body .function .Notifications > swiper {
  margin-right: 28rpx;
}
.body .function .Notifications > swiper .remind_swiper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.body .function .Notifications > swiper .remind_swiper > view:first-child {
  display: flex;
  align-items: center;
}
.body .function .Notifications > swiper .remind_swiper > view:first-child > view {
  height: 10rpx;
  width: 10rpx;
  background: #000;
  border-radius: 50%;
  margin-right: 20rpx;
}
.body .function .Function-items {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  font-size: 26rpx;
  color: #7a7a7a;
}
.body .function .Function-items > view {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 20rpx 0;
}
.body .function .Function-items > view > view:first-child {
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 12px rgba(65, 98, 213, 0.2);
  position: relative;
  margin-bottom: 15rpx;
}
.body .function .Function-items > view > view:first-child > icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
