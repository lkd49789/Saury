    <view class="body">
        <view class="container-title">
            <text class="title-text">设置</text>
        </view>
        <view class="tools-item">
            <block wx:for="{{toolsItem}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view bindtap="click" data-wpyclick-a="{{item.name}}">
                    <view>
                        <icon class="iconfont {{item.icon}}" style="font-size:40rpx"/>
                    </view>
                    <view>
                        <text>{{item.text}}</text>
                    </view>
                </view>
            </block>
        </view>
        <view class="quit" bindtap="quit">
            <text>退出登录</text>
        </view>
    </view>