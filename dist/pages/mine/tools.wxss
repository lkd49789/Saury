.body {
  height: 100%;
}
.body .container-title {
  height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  color: #2a2a2a;
  line-height: 104rpx;
  border-bottom: 1px solid #dedede;
  margin-bottom: 14rpx;
}
.body .tools-item {
  padding: 0 28rpx;
}
.body .tools-item > view {
  display: flex;
  align-items: center;
}
.body .tools-item > view > view:first-child {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}
.body .tools-item > view > view:last-child {
  width: 85%;
  padding: 30rpx 0;
  border-bottom: 1px solid #dedede;
}
.body .quit {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-top: 1px solid #dfdfdf;
  height: 98rpx;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.body .border-blur {
  height: 30rpx;
  width: 100%;
  background: #f4f4f4;
}
