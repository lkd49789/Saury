
  <view class="container">
    <view class="pageTitle">
      <text>案件律师信息</text>
    </view>
    <view class="lawyerBox">
      <block wx:for="{{dutiesData}}" wx:for-index="dutiesData_index" wx:for-item="dutiesData_item" wx:key="index">
        <view class="item">
          <view class="item-title">
            <text>{{dutiesData_item.name}}</text>
            <text style="color:#e20000;margin-left:14rpx">{{dutiesData_item.warningText}}</text>
          </view>
          <view class="item-content">
            <block wx:for="{{dutiesData_item.addLawyerData}}" wx:for-index="addData_index" wx:for-item="item" wx:key="index">
              <view class="addLayerBtn">
                <image src="{{item.avatar}}" mode="scaleToFill" lazy-load="false"/>
                <text>{{item.name}}</text>
                <icon class="iconfont icon-zirenwushanchu1" style="font-size:15px;color:#e20000" catchtap="deleteItem" data-wpydeleteitem-a="{{dutiesData_index}}" data-wpydeleteitem-b="{{item.userId}}"/>
              </view>
            </block>
            <view class="addLayerBtn"  wx:if="{{dutiesData_item.isShowAddImage}}">
              <image src="{{addImage}}" mode="scaleToFill" lazy-load="false" bindtap="isShowChooseLawyer" data-wpyisshowchooselawyer-a="{{dutiesData_index}}" data-wpyisshowchooselawyer-b="{{dutiesData_item.id}}"/>
              <text style="color:#7a7a7a">请添加</text>
            </view>
          </view>
        </view>
      </block>
    </view>
    <view class="chooseLayerMask"  wx:if="{{isShowChooseLawyer}}" id="Mask" catchtap="isMask" catchtouchmove="{{true}}">
      <view class="content" id="MaskContent" catchtap="isMask">
        <view class="input">
          <input value="{{inputValue}}" type="text" placeholder="搜索关键词" placeholder-class="placeholder" maxlength="140" bindinput="searchData" style="border-bottom:1px solid #dfdfdf;" bindblur="blur"/>
        </view>
        <view class="scroll-Y">
          <block wx:for="{{lawyerListData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <view catchtap="addLawyerData" data-wpyaddlawyerdata-a="{{item.id}}" data-wpyaddlawyerdata-b="{{item.name}}" data-wpyaddlawyerdata-c="{{item.avatar}}" data-wpyaddlawyerdata-d="{{item.categoryName}}">
              <image src="{{item.avatar}}" mode="scaleToFill" lazy-load="false"/>
              <view>
                <text>{{item.name}}</text>
                <text style="color:#7a7a7a">{{item.organizationUnitName}}</text>
              </view>
            </view>
          </block>
        </view>
      </view>
    </view>
    <image src="{{'../../../../images/test.png'}}" mode="scaleToFill" lazy-load="true" class="addImage" style="opacity:1 ;" bindtap="submitData" wx:if="{{showSubBtn}}">
    </image>
  </view>