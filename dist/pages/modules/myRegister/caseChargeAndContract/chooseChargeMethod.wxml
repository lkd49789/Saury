
    <view class="container">
        <view class="fixed-view">
            <view class="case-top">
                <text class="title">收费方式</text>
            </view>
            <view class="navbar">
                <scroll-view scroll-x>
                    <block wx:for="{{navbars}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view class="item {{currentTab == index ? 'active' : ''}} " bindtap="navbarTap"  wx:if="{{payStyle[index]}}" data-wpynavbartap-a="{{index}}">
                            <text>{{item}}</text>
                            <view wx:if="{{currentTab == index}}" class="navbar_box"/>
                        </view>
                    </block>
                </scroll-view>
            </view>
        </view>
        <view class="chargeContent">
            <view class="charge-item"  wx:if="{{currentTab==0&&payStyle[0]}}">
                <view class="checkedBox">
                    <view class="title">
                        <text>正常收费类别</text>
                        <icon hidden="{{!isAddShow}}" class="iconfont icon-xinjianzhuye" style="font-size:40rpx;color:#7a7a7a" bindtap="toCreateNomalCharge"/>
                    </view>
                    <radio-group class="radio-group" bindchange="PayDetailQuota">
                        <label class="radio" wx:for="{{PayDetailQuota}}" wx:key="index" index="index" item="item">
                                                      <radio value="{{item.value}}" checked="{{item.isSelected}}" color="#5d73fa"/>{{item.displayText}}
                        </label>
                    </radio-group>
                </view>
                <view class="items-content">
                    <block wx:for="{{normalChargeListDatas}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view class="nomalItem">
                            <view>
                                <text>{{item.payAmount}}</text>
                                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:40rpx;color:#b2b2b2" bindtap="nomalOperating" data-wpynomaloperating-a="{{item.id}}" data-wpynomaloperating-b="{{index}}" data-wpynomaloperating-c="nomal"/>
                            </view>
                            <view>
                                <text style="background:{{item.useBill=='N'?'#7a7a7a':'#5d73fa'}}"/>
                                <text>使用账单</text>
                            </view>
                            <view>
                                {{item.remark||'未填写'}}
                            </view>
                            <view>
                                {{item.payDate||'未填写'}}
                            </view>
                        </view>
                    </block>
                </view>
            </view>
            <view class="charge-item" wx:if="{{currentTab==1&&payStyle[1]}}">
                <view class="checkedBox">
                    <view class="title">
                        <text>风险收费类别</text>
                        <icon class="iconfont icon-xinjianzhuye" style="font-size:40rpx;color:#7a7a7a" bindtap="toCreateRiskCharge"/>
                    </view>
                    <radio-group class="radio-group" bindchange="PayDetailRisk">
                        <label class="radio" wx:for="{{PayDetailRisk}}" wx:key="index" index="index" item="item">
                                                <radio value="{{item.value}}" checked="{{item.isSelected}}" color="#5d73fa"/>{{item.displayText}}
                                            </label>
                    </radio-group>
                </view>
                <view class="items-content">
                    <block wx:for="{{riskChargeListDatas}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view class="riskItem">
                            <view>
                                <text>风险金额：<text style="color:#2a2a2a">{{item.payAmount}}</text></text>
                                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:40rpx;color:#b2b2b2" bindtap="riskOperating" data-wpyriskoperating-a="{{item.id}}" data-wpyriskoperating-b="{{index}}" data-wpyriskoperating-c="risk"/>
                            </view>
                            <view>
                                基本金额：<text style="color:#2a2a2a">{{item.riskBasicAmount||'未填写'}}</text>
                            </view>
                            <view>
                                风险达成条件：<text style="color:#2a2a2a">{{item.remark||'未填写'}}</text>
                            </view>
                            <view>
                                <view>
                                    <text style="background:{{item.useBill=='N'?'#7a7a7a':'#5d73fa'}}"/>
                                    <text>使用账单</text>
                                </view>
                                <view>
                                    <text style="background:{{item.isAcceptable=='N'?'#7a7a7a':'#5d73fa'}}"/>
                                    <text>可收款</text>
                                </view>
                            </view>
                        </view>
                    </block>
                </view>
            </view>
            <view class="charge-item" wx:if="{{currentTab==2&&payStyle[2]}}">
                <view class="checkedBox">
                    <view class="title">
                        <text>小时收费类别</text>
                    </view>
                    <radio-group class="radio-group" bindchange="PayDetailHourly">
                        <label class="radio" wx:for="{{PayDetailHourly}}" wx:key="index" index="index" item="item">
                                                <radio value="{{item.value}}" checked="{{item.isSelected}}" color="#5d73fa"/>{{item.displayText}}
                                            </label>
                    </radio-group>
                </view>
                <view class="items-content" style="padding:33rpx 0">
                    <view style="padding:0 28rpx">
                        <view class="flex-container">
                            
<view>
     <view class="textarea"  wx:if="{{$PayPeriod$isShow}}">
        <view>
            <text>{{$PayPeriod$input.title}}</text>
        </view>
        <view class="textarea-container" style="border-bottom:1px solid {{$PayPeriod$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <textarea name="{{$PayPeriod$input.name}}" bindfocus="$PayPeriod$bindfocus" bindblur="$PayPeriod$bindblur" placeholder="请输入{{$PayPeriod$input.title}}" bindinput="$PayPeriod$bindinput" maxlength="-1" value="{{$PayPeriod$inputValue}}" auto-height cursor-spacing="5px" fixed="{{$PayPeriod$true}}" style="width:83%"/>
        </view>
        <view wx:if="{{$PayPeriod$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
    <view class="input"  wx:else>
        <view>
            <text>{{$PayPeriod$input.title}}</text>
        </view>
        <view class="input-container" style="border-bottom:1px solid {{$PayPeriod$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <input name="{{$PayPeriod$input.name}}" bindfocus="$PayPeriod$bindfocus" bindblur="$PayPeriod$bindblur" placeholder="请输入{{$PayPeriod$input.title}}" bindinput="$PayPeriod$bindinput" disabled="{{$PayPeriod$input.disabled}}" value="{{$PayPeriod$inputValue}}" type="{{$PayPeriod$input.type||'text'}}" confirm-type="done" cursor-spacing="5px"/>
        </view>
        <view wx:if="{{$PayPeriod$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
   
</view>
    

                            
