
    <view class="container">
        <view class="pageTitle">
            {{pageStatus==1?'一次性收费':'分阶段收费'}}
        </view>
        <view class="editArea">
            <view class="tui-picker-content">
                <view>付款日期</view>
                <picker id="StartDate" mode="date" value="{{PayDate}}" start="2000-01-01" end="2050-12-31" bindchange="PayDateChange" style="flex:1;border-bottom: 1px solid #dfdfdf;">
                    <view class="tui-picker-detail">
                        {{PayDate||'请选择'}}
                        <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                    </view>
                </picker>
                <view  wx:if="{{PayDateWarning}}" style="color:#e20000">
                    <text>此字段是必填字段</text>
                </view>
            </view>
            
<view>
     <view class="textarea"  wx:if="{{$PayAmount$isShow}}">
        <view>
            <text>{{$PayAmount$input.title}}</text>
        </view>
        <view class="textarea-container" style="border-bottom:1px solid {{$PayAmount$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <textarea name="{{$PayAmount$input.name}}" bindfocus="$PayAmount$bindfocus" bindblur="$PayAmount$bindblur" placeholder="请输入{{$PayAmount$input.title}}" bindinput="$PayAmount$bindinput" maxlength="-1" value="{{$PayAmount$inputValue}}" auto-height cursor-spacing="5px" fixed="{{$PayAmount$true}}" style="width:83%"/>
        </view>
        <view wx:if="{{$PayAmount$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
    <view class="input"  wx:else>
        <view>
            <text>{{$PayAmount$input.title}}</text>
        </view>
        <view class="input-container" style="border-bottom:1px solid {{$PayAmount$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <input name="{{$PayAmount$input.name}}" bindfocus="$PayAmount$bindfocus" bindblur="$PayAmount$bindblur" placeholder="请输入{{$PayAmount$input.title}}" bindinput="$PayAmount$bindinput" disabled="{{$PayAmount$input.disabled}}" value="{{$PayAmount$inputValue}}" type="{{$PayAmount$input.type||'text'}}" confirm-type="done" cursor-spacing="5px"/>
        </view>
        <view wx:if="{{$PayAmount$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
   
</view>
    

            
