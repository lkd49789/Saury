@import "./../../../../components/picker/option.wxss";
@import "./../../../../components/picker/input.wxss";
.container {
  margin: 44rpx 28rpx;
}
.container .keyword-search .search_top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container .keyword-search .search_top .search_input {
  width: 100%;
  padding: 10rpx 20rpx;
  border-radius: 100rpx;
  background: #f4f4f4;
  display: flex;
  align-items: center;
  margin-right: 14rpx;
}
.container .keyword-search .search_top .search_input > icon {
  margin-right: 14rpx;
}
.container .keyword-search .search_top .search_input > input {
  width: 100%;
}
.container .keyword-search .search_top .top_right_btn {
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .keyword-search .search_history {
  margin-top: 28rpx;
}
.container .keyword-search .search_history .history_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container .keyword-search .search_history .history_content {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.container .keyword-search .search_history .history_content > view {
  background: #f4f4f4;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  color: #7a7a7a;
  margin: 14rpx;
  position: relative;
}
.container .keyword-search .search_history .history_content > view > icon {
  position: absolute;
  top: -30rpx;
  right: -10rpx;
}
.container .advanced-search-input-panel .advanced-search-title {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.container .advanced-search-input-panel .advanced-search-title > text {
  font-size: 40rpx;
}
.container .advanced-search-input-panel .advanced-search-content {
  margin: 30rpx 0 40rpx 0;
}
.container .tui-picker-content {
  margin-bottom: 36rpx;
}
.container .tui-picker-content picker {
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}
.container .tui-picker-content picker .tui-picker-detail {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #7a7a7a;
}
.container .tui-picker-content .checkbox {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.container .tui-picker-content .checkbox .checkboxItem {
  margin: 20rpx 20rpx 0 0;
}
.container .checkedBox {
  margin-bottom: 36rpx;
  border-bottom: 1px solid #dedede;
}
.container .checkedBox .checkbox-group {
  padding-top: 22rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
}
.container .checkedBox .checkbox-group .label {
  padding-bottom: 22rpx;
  width: 50%;
  align-items: center;
  display: flex;
}
.container .checkedRadioBox {
  margin-bottom: 36rpx;
  border-bottom: 1px solid #dedede;
}
.container .checkedRadioBox .radio-group {
  height: 106rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  width: 100%;
}
.container .checkedRadioBox .radio-group .radio {
  align-items: center;
  flex: 1;
  display: flex;
  justify-content: center;
}
.container .btn-sub {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 99;
}
