@import "./../../../../components/picker/input.wxss";
.body {
  height: 100%;
  position: relative;
}
.body .top-title {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 99;
}
.body .main {
  margin-top: 149rpx;
}
.body .main .content-top {
  padding: 0 28rpx 30rpx 28rpx;
}
.body .main .content-top > view:not(:last-child) {
  margin-bottom: 20rpx;
}
.body .main .content-top > view:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .main .content-top > view:not(:first-child) {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.body .main .content-top > view:not(:first-child) > text:first-child {
  margin-bottom: 14rpx;
  color: #7a7a7a;
}
.body .main .border-line {
  height: 20rpx;
  width: 100%rpx;
  background: #f4f4f4;
}
.body .main .content-bottom {
  padding: 30rpx 28rpx 30rpx 28rpx;
}
.body .main .content-bottom > view:first-child {
  margin-bottom: 30rpx;
  color: #7a7a7a;
}
.body .main .content-bottom > view:last-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .main .content-bottom > view:last-child > view:first-child {
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.body .main .content-bottom > view:last-child > view:first-child > image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.body .main .content-bottom > view:last-child > view {
  display: flex;
  flex-direction: column;
}
.body .main .content-bottom > view:last-child > view:last-child {
  width: 80%;
}
.body .main .content-bottom > view:last-child > view:last-child > view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.body .main .content-bottom > view:last-child > view:last-child > view:last-child {
  margin-bottom: 0;
}
.body .main .auditStatus {
  padding: 40rpx 28rpx 30rpx 28rpx;
}
.body .main .auditStatus .radio-group {
  display: flex;
  justify-content: space-between;
}
.body .main .auditStatus .checked {
  margin-bottom: 50rpx;
}
.body .addImage {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 9999;
}
