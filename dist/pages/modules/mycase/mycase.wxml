
	<view class="body">
		<view class="fixed-view">
			<view class="top-title">
				<view class="flex">
					<view style="margin-left:28rpx">
						<text>我的案件</text>
					</view>
					<view style="margin-right:28rpx">
						<icon class="iconfont icon-sousuo1 " style="font-size:60rpx;color:#5d73fa;margin-right:14rpx" bindtap="toSearchPage"/>
						<icon class="iconfont icon-shaixuan1" style="font-size:60rpx;color:#5d73fa" bindtap="ishowFilter"/>
					</view>
				</view>
				<!-- 案件导航 -->
				
    <view class="navbar">
        <scroll-view scroll-x>
            <block wx:for="{{$navbar$navbars}}" wx:for-index="$navbar$index" wx:for-item="$navbar$item" wx:key="$navbar$index">
                <view class="item {{$navbar$currentTab == $navbar$index ? 'active' : ''}} " bindtap="$navbar$navbarTap" data-wpynavbartap-a="{{$navbar$index}}">
                    <text>{{$navbar$item}}</text>
                    <view  wx:if="{{$navbar$currentTab == $navbar$index}}" class="navbar_box"/>
                </view>
            </block>
        </scroll-view>
    </view>

				<view class="filter animation"  wx:if="{{isShow}}">
					<view catchtap="filter" data-wpyfilter-a="cteateTime">创建时间排序</view>
					<!-- <view catchtap="filter('processStatusList')">状态排序</view>
					<view catchtap="filter('categoryList')">类别排序</view> -->
				</view>
			</view>
			<!-- </scroll-view> -->
		</view>
		<view class="service-information">
			<view class="height2">
				<block wx:for="{{userCasesData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
					<view class="case-detail " bindtap="tocasedetail"  wx:if="{{dataA.length!==0}}" data-wpytocasedetail-a="{{item.id}}" data-wpytocasedetail-b="{{item.clientId}}">
						<view class="detail">
							<text class="about-case">{{item.name}}</text>
							<text class="law-office">{{item.clientName||'未填写'}}</text>
							<text class="case-type">{{item.categoryName}}</text>
						</view>
						<view class="case-bottom">
							<view>
								<view style="width:10%">
									<text class="statusColor" style="border: 1px solid {{statusColor}};"/>
								</view>
								<text class="hint">{{item.processStatusName}}</text>
							</view>
							<text class="date">{{item.acceptDate}}</text>
						</view>
					</view>
				</block>
			</view>
		</view>
	</view>