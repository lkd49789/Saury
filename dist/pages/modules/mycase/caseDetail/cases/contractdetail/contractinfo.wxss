.body {
  font-size: 28rpx;
  height: 100%;
}
.body .container-title {
  height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  color: #2a2a2a;
  line-height: 104rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #dedede;
}
.body .contractinfo-container {
  padding-top: 44rpx;
  font-size: 28rpx;
}
.body .contractinfo-container .contractinfo-detail {
  padding: 0 28rpx;
  display: flex;
  flex-wrap: wrap;
}
.body .contractinfo-container .contractinfo-detail > view {
  display: flex;
  flex-direction: column;
  margin-bottom: 36rpx;
}
.body .contractinfo-container .contractinfo-detail > view > text:first-child {
  color: #7a7a7a;
  margin-bottom: 14rpx;
}
.body .contractinfo-doc {
  padding: 44rpx 28rpx;
}
.body .contractinfo-doc .doc-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 36rpx;
  align-items: baseline;
}
.body .contractinfo-doc .doc-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .contractinfo-doc .doc-content .content-left {
  display: flex;
  align-items: center;
}
.body .contractinfo-doc .doc-content .content-right {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  width: 80%;
}
.body .chargeinfo {
  padding: 44rpx 28rpx;
}
.body .chargeinfo .charge-title {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 36rpx;
}
