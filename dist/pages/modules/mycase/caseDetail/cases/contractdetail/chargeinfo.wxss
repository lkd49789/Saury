.body .graycolor {
  color: #7a7a7a;
}
.body .scroll-view {
  margin-top: 22rpx;
  width: 100%;
}
.body .scroll-view .charge-item {
  height: 300rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  margin: 24rpx 28rpx;
  border-radius: 20rpx;
  justify-content: center;
}
.body .charge-title-container {
  padding: 0 28rpx 0 28rpx;
  font-size: 28rpx;
  color: #2a2a2a;
}
.body .charge-title-container .title-content-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 44rpx;
}
.body .charge-title-container .title-content-top .content-left {
  width: 85%;
}
.body .charge-title-container .title-content-top .content-left > text:first-child {
  margin-right: 20rpx;
  color: #7a7a7a;
}
.body .charge-title-container .title-content-top .content-right {
  color: #5d73fa;
}
.body .charge-title-container .title-content-bottom > text:first-child {
  margin-right: 20rpx;
  color: #7a7a7a;
}
.body .charge-item-container {
  padding: 0 28rpx;
  font-size: 28rpx;
  color: #2a2a2a;
}
.body .charge-item-container .charge-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.body .charge-item-container .charge-item .charge-item-left {
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .charge-item-container .charge-item .charge-item-left > image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.body .charge-item-container .charge-item .charge-item-right {
  width: 85%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #dedede;
}
.body .charge-item-container .charge-item .charge-item-right > view > text:last-child {
  margin-left: 20rpx;
  color: #7a7a7a;
}
.body .charge-item1-container {
  font-size: 28rpx;
  color: #2a2a2a;
}
.body .charge-item1-container .charge-item-content1 {
  padding: 44rpx 28rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
.body .charge-item1-container .charge-item-content1 > view:not(:nth-child(3)) {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 20rpx;
  align-items: center;
}
.body .charge-item1-container .charge-item-content1 > view:not(:nth-child(3)) .radius {
  height: 20rpx;
  width: 20rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.body .charge-item1-container .charge-item-content1 > view:nth-child(3) {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 20rpx;
}
.body .charge-item1-container .charge-item-content1 > view:nth-child(3) > text:last-child {
  margin-left: 14rpx;
  width: 89%;
}
.body .charge-item1-container .charge-item-content1 > view:first-child {
  justify-content: space-between;
}
.body .charge-item2-container {
  font-size: 28rpx;
  color: #2a2a2a;
}
.body .charge-item2-container .charge-item-content2 {
  padding: 44rpx 28rpx;
}
.body .charge-item2-container .charge-item-content2 > view:not(:last-child) {
  margin-bottom: 20rpx;
}
.body .charge-item2-container .charge-item-content2 > view:not(:last-child) > text:first-child {
  color: #7a7a7a;
  margin-right: 14rpx;
}
.body .charge-item2-container .charge-item-content2 .last-line {
  display: flex;
  align-items: center;
}
.body .charge-item2-container .charge-item-content2 .last-line > view {
  display: flex;
  align-items: center;
}
.body .charge-item2-container .charge-item-content2 .last-line > view:first-child {
  margin-right: 60rpx;
}
.body .charge-item2-container .charge-item-content2 .last-line > view:first-child > view {
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
.body .charge-item2-container .charge-item-content2 .last-line > view:last-child > view {
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
