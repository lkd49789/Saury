.body {
  height: 100%;
}
.body .container-title {
  height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  color: #2a2a2a;
  line-height: 104rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #dedede;
}
.body .introduce-container {
  padding: 44rpx 28rpx;
  font-size: 28rpx;
}
.body .introduce-container .introduce-title {
  margin-bottom: 44rpx;
}
.body .introduce-container > view {
  text-indent: 1em;
}
.body .introduce-container > view > text {
  line-height: 50rpx;
}
