.body {
  height: 100%;
}
.body .container-title {
  height: 104rpx;
  font-size: 48rpx;
  padding: 0 28rpx;
  color: #2a2a2a;
  line-height: 104rpx;
  border-bottom: 1px solid #dedede;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .casebase-container-title {
  padding: 44rpx 28rpx;
}
.body .casebase-container-title .casebase-title-content {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #2a2a2a;
}
.body .casebase-container-title .casebase-title-content > view:not(:last-child) {
  margin-bottom: 26rpx;
}
.body .border-line {
  width: 100%;
  height: 14rpx;
  background: #f4f4f4;
}
.body .casebase-middle {
  padding: 30rpx 28rpx;
  font-size: 28rpx;
}
.body .casebase-middle > view:not(:first-child) {
  display: flex;
  flex-direction: column;
}
.body .casebase-middle > view:not(:last-child) {
  margin-bottom: 36rpx;
}
.body .casebase-middle > view:first-child > view {
  display: flex;
  flex-direction: column;
}
.body .casebase-middle > view:first-child > view > text:first-child {
  color: #7a7a7a;
  margin-bottom: 20rpx;
}
.body .casebase-middle > view > text:first-child {
  color: #7a7a7a;
  margin-bottom: 20rpx;
}
.body .casebase-bottom {
  padding: 30rpx 28rpx;
  font-size: 28rpx;
}
.body .casebase-bottom > view:nth-child(2n + 1) {
  color: #7a7a7a;
  margin-bottom: 20rpx;
}
.body .casebase-bottom > view:not(:last-child):nth-child(2n) {
  margin-bottom: 36rpx;
}
.body .casebase-bottom .agency-authority {
  color: #5d73fa;
  margin-top: 36rpx;
}
.body .casebase-bottom .agency-authority > view {
  margin-bottom: 46rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.body .casebase-bottom .agency-authority > view > text {
  border: 1px solid #5d73fa;
  border-radius: 30rpx;
  margin-right: 30rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}
