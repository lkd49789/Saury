
    <view class="container">
        <view class="keyword-search"  wx:if="{{showPage}}">
            <view class="search_top">
                <view class="search_input">
                    <icon class="iconfont icon-sousuo1 input_sousuo" style="color:#5d73fa;font-size:24px;"/>
                    <input value="{{searchClentValue}}" type="text" confirm-type="search" placeholder="案件编号/案件名称/客户编号/客户名称" placeholder-class="placeholder" maxlength="30" bindconfirm="submitSearch" focus="true">
                    </input>
                </view>
                <view class="top_right_btn">
                    <icon class="iconfont icon-gaojisousuo" style="color:#5d73fa;font-size:35px;" bindtap="showPage"/>
                </view>
            </view>
            <view class="search_history">
                <view class="history_title">
                    <text>历史搜索</text>
                    <icon class="iconfont icon-shanchu2" style="color:#7a7a7a;font-size:35rpx;" catchtap="deletItemAll" wx:if="{{history_keyWord_case.length!==0}}"/>
                </view>
                <view class="history_content">
                    <block wx:for="{{history_keyWord_case}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view bindtap="history" bindlongpress="longTap" data-wpyhistory-a="{{item}}" data-wpylongtap-a="{{index}}">
                            <text>{{item}}</text>
                            <icon class="iconfont icon-zirenwushanchu" style="color:#dfdfdf;font-size:30rpx;" wx:if="{{isShowArray[index]}}" catchtap="deletItem" data-wpydeletitem-a="{{index}}"/>
                        </view>
                    </block>
                </view>
            </view>
        </view>
        <view class="advanced-search-input-panel"  wx:else="{{showPage}}">
            <view class="advanced-search-title">
                <text>高级搜索</text>
                <icon class="iconfont icon-zirenwushanchu" style="color:#7a7a7a;font-size:40rpx;" bindtap="showPage"/>
            </view>
            <view class="advanced-search-content">
                
    <view class="picker-date">
        <view>{{$creationTimeRange$pickerData.title}}</view>
        <view style="display:flex;align-items:center;">
            <picker id="startDate" mode="date" value="{{$creationTimeRange$pickerData.startDateData}}" start="2000-01-01" end="2050-12-31" bindchange="$creationTimeRange$bindDateChange" style="flex:1">
                <view class="tui-picker-detail">
                    {{$creationTimeRange$pickerData.startDateData||'请选择'}}
                    <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                </view>
            </picker>
            <text style="margin:0 20rpx">至</text>
            <picker id="endDate" mode="date" value="{{$creationTimeRange$pickerData.endDateData}}" start="2000-01-01" end="2050-12-31" bindchange="$creationTimeRange$bindDateChange" style="flex:1">
                <view class="tui-picker-detail">
                    {{$creationTimeRange$pickerData.endDateData||'请选择'}}
                    <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                </view>
            </picker>
        </view>
    </view>

                
<view>
     <view class="textarea"  wx:if="{{$creatorUserName$isShow}}">
        <view>
            <text>{{$creatorUserName$input.title}}</text>
        </view>
        <view class="textarea-container" style="border-bottom:1px solid {{$creatorUserName$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <textarea name="{{$creatorUserName$input.name}}" bindfocus="$creatorUserName$bindfocus" bindblur="$creatorUserName$bindblur" placeholder="请输入{{$creatorUserName$input.title}}" bindinput="$creatorUserName$bindinput" maxlength="-1" value="{{$creatorUserName$inputValue}}" auto-height cursor-spacing="5px" fixed="{{$creatorUserName$true}}" style="width:83%"/>
        </view>
        <view wx:if="{{$creatorUserName$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
    <view class="input"  wx:else>
        <view>
            <text>{{$creatorUserName$input.title}}</text>
        </view>
        <view class="input-container" style="border-bottom:1px solid {{$creatorUserName$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <input name="{{$creatorUserName$input.name}}" bindfocus="$creatorUserName$bindfocus" bindblur="$creatorUserName$bindblur" placeholder="请输入{{$creatorUserName$input.title}}" bindinput="$creatorUserName$bindinput" disabled="{{$creatorUserName$input.disabled}}" value="{{$creatorUserName$inputValue}}" type="{{$creatorUserName$input.type||'text'}}" confirm-type="done" cursor-spacing="5px"/>
        </view>
        <view wx:if="{{$creatorUserName$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
   
</view>
    

