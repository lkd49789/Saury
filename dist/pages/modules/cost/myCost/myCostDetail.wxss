.bill .flex {
  display: flex;
  justify-content: space-between;
}
.bill .main {
  margin-top: 119rpx;
}
.bill .bill_content {
  background: #ffffff;
  margin: 0 auto;
  padding: 30rpx 28rpx;
  font-size: 28rpx;
  overflow: auto;
  border-bottom: 20rpx solid #f2f2f2;
}
.bill .bill_content .bill_gray {
  color: #7a7a7a;
}
.bill .bill_content .bill_yellow {
  color: #ff9900;
}
.bill .bill_content .bill_gary {
  color: #38a633;
}
.bill .bill_content .bill_box .bill_view {
  line-height: 42rpx;
  margin-bottom: 20rpx;
}
.bill .bill_content .bill_box .bill_blue {
  color: #3EB5ff;
}
.bill .workflows {
  box-shadow: 0rpx 8rpx 30rpx 0rpx rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
  margin: 44rpx 28rpx;
}
.bill .workflows .title {
  align-items: center;
}
.bill .workflows .status {
  margin-right: 20rpx;
}
.bill .workflows .bill-del > text {
  color: #5d73fa;
}
.bill .bill_btn {
  border-radius: 0;
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 98rpx;
  background: #5d73fa;
  color: #fff;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
}
