.bill .main {
  margin-top: 119rpx;
}
.bill .bill_content {
  background: #ffffff;
  margin: 0 auto;
  padding: 30rpx 28rpx;
  font-size: 28rpx;
  overflow: auto;
  border-bottom: 20rpx solid #f2f2f2;
}
.bill .bill_content .bill_box .bill_view {
  line-height: 42rpx;
  margin-bottom: 20rpx;
}
.bill .bill_content .workflows {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bill .bill_content .workflows .bill-del > text {
  color: #5d73fa;
}
.bill .flex {
  display: flex;
  margin-bottom: 15rpx;
}
.bill .right {
  text-align: right;
}
.bill .left {
  text-align: left;
}
.bill .bill_btns {
  height: 98rpx;
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
}
.bill .bill_btn {
  border-radius: 0;
  width: 50%;
  text-align: center;
  background: #5d73fa;
  color: #fff;
  line-height: 98rpx;
  font-size: 32rpx;
}
