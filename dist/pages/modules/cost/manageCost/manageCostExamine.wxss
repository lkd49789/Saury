@import "./../../../../components/picker/input.wxss";
.bill .bill_title {
  height: 104rpx;
  line-height: 104rpx;
  padding-left: 28rpx;
  font-size: 48rpx;
  position: relative;
  border-bottom: 1px solid #dedede;
}
.bill .bill_content {
  background: #ffffff;
  margin: 0 auto;
  padding: 44rpx 28rpx;
  font-size: 28rpx;
  overflow: auto;
}
.bill .bill_content .checked {
  margin-bottom: 30rpx;
}
.bill .bill_content .checked > view:first-child {
  margin-bottom: 30rpx;
}
.bill .bill_content .input {
  margin-bottom: 36rpx;
  position: relative;
}
.bill .bill_content .input view:first-child {
  color: #2a2a2a;
}
.bill .bill_content .input .input-container {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 28rpx 0;
}
.bill .bill_content .input .input-container > input {
  width: 100%;
}
.bill .addImage {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 99999;
}
.bill .warming {
  color: #e20000;
}
