@import "./../../../../components/navbar.wxss";
.bill .bill_title {
  height: 104rpx;
  line-height: 104rpx;
  padding-left: 28rpx;
  font-size: 48rpx;
  position: relative;
  border-bottom: 1px solid #dedede;
}
.bill .bill_content {
  background: #ffffff;
  margin: 0 auto;
  padding: 44rpx 0;
  font-size: 28rpx;
  overflow: auto;
}
.bill .bill_content .caseConflictBorder_radius {
  border: 1px solid;
  width: 15rpx;
  height: 15rpx;
  line-height: 28rpx;
  border-radius: 15rpx;
  margin-right: 10rpx;
  display: inline-block;
}
.bill .bill_content .bill_box {
  padding: 30rpx 0;
  margin: 0 28rpx;
  border-bottom: 1px solid #bfbfbf;
}
.bill .bill_content .bill_box .bill_view {
  line-height: 45rpx;
}
.bill .bill_content .bill_box2 {
  line-height: 42rpx;
  width: 50%;
}
.bill .bill_content .bill_gray {
  color: #7a7a7a;
  border-color: #7a7a7a;
}
.bill .bill_content .bill_blue {
  color: #009dff;
  border-color: #009dff;
}
.bill .bill_content .bill_red {
  color: #e20000;
  border-color: #e20000;
}
.bill .bill_content .bill_yellow {
  color: #ff9900;
  border-color: #ff9900;
}
.bill .bill_content .bill_green {
  color: #069400;
  border-color: #069400;
}
.bill .bill_content .bill_state {
  float: right;
  position: relative;
}
.bill .bill_content .bill_right {
  text-align: right;
  margin: 30rpx 28rpx;
}
.bill .bill_content .bill_line {
  height: 24rpx;
  width: 100%;
  background: #f4f4f4;
  margin: -1rpx 0;
}
.bill .flex {
  display: flex;
  margin-bottom: 15rpx;
}
