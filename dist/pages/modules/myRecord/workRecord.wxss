@import "./../../../components/placeHolderImage.wxss";
.body {
  height: 100%;
  position: relative;
}
.body .top-title {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 10000;
}
.body .top-title .flex {
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 48rpx;
  border-bottom: 1px solid #dedede;
}
.body .top-title .filter {
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 99999;
  padding: 20rpx 28rpx 0 28rpx;
}
.body .top-title .filter > view {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}
.body .addImage {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 99999;
}
.body .main {
  margin: 149rpx 28rpx 0 28rpx;
  font-size: 28rpx;
  color: #2a2a2a;
  position: relative;
}
.body .main .records-remind {
  display: flex;
  align-items: baseline;
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
  position: fixed;
  top: 149rpx;
  left: 28rpx;
  right: 28rpx;
  z-index: 9999;
  background: #fff;
}
.body .main > view:nth-child(2) > view {
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
}
.body .main > view:nth-child(2) > view:not(:last-child) {
  margin-bottom: 44rpx;
}
.body .main > view:nth-child(2) .records-item .item-onLine {
  margin-bottom: 36rpx;
  display: flex;
  justify-content: space-between;
}
.body .main > view:nth-child(2) .records-item .item-twoLine {
  margin-bottom: 20rpx;
}
.body .main > view:nth-child(2) .records-item .item-threeLine {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .main > view:nth-child(2) .records-item .item-threeLine > view {
  display: flex;
  align-items: center;
}
