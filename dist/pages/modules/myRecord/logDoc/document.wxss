.body {
  height: 100%;
  position: relative;
}
.body .container-title {
  height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  color: #2a2a2a;
  line-height: 104rpx;
  background: #fff;
  border-bottom: 1px solid #dedede;
}
.body .fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.body .doc-item-contianer {
  font-size: 28rpx;
  padding: 145rpx 28rpx 0 20rpx;
}
.body .doc-item-contianer .modal-view {
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
  background: rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column-reverse;
}
.body .doc-item-contianer .modal-view .box {
  background: #fff;
  height: 196rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.body .doc-item-contianer .modal-view .box > view {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 90%;
}
.body .doc-item-contianer .doc-item {
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 22rpx;
  margin-bottom: 44rpx;
}
.body .doc-item-contianer .doc-item .doc-left-content {
  width: 85%;
  margin-left: 49rpx;
  display: flex;
  flex-direction: column;
}
.body .doc-item-contianer .doc-item .doc-left-content .texthide {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.body .modal-img {
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
  background: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .modal-img .img {
  z-index: 1;
}
.body .video-view {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}
.body .video-view .videoContent {
  width: 100%;
  position: fixed;
  z-index: 1000;
}
