
    <view class="container">
        <view class="page-title">
            审核记录
        </view>
        <view class="main">
            <block wx:for="{{approvalList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view class="items">
                    <view class="items-left">
                        <image src="{{item.avatar}}" mode="scaleToFill" lazy-load="false"/>
                        <text>{{item.employeeName||'未填写'}}</text>
                    </view>
                    <view class="items-right"> 
                        <view class="items-right-top">
                            <text style="color:{{item.result=='A'?'#069400':item.result=='R'?'#e20000':'#7a7a7a'}}">{{item.resultText||'未填写'}}</text>
                            <text>{{item.approvalDateText||'未填写'}}</text>
                        </view>
                        <view class="items-right-bottom">
                            <text>{{item.remark||'未填写'}}</text>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </view>