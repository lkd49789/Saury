
  <view class="body">
    <view class="container-title">
      <text class="title-text">日志详情</text>
      <icon class="iconfont icon-bianji" style="font-size:60rpx;color:#5d73fa" bindtap="toCompileRecord"  wx:if="{{(workLogData.processStatus=='N'||workLogData.processStatus=='R')&&!toAudit&&!chooseMe}}"/>
    </view>
    <view class="logDetail-container" style="margin-bottom:{{chooseMe||toAudit?'98rpx':'0'}}">
      <view class="log-chunck1 bold">
        <view>
          <text>日志类别</text>
          <text>{{workLogData.categoryText||'未填写'}}</text>
        </view>
        <view>
          <text>工作类别</text>
          <text>{{workLogData.workTypeText||'未填写'}}</text>
        </view>
        <view style="width:100%;">
          <text>工作时间</text>
          <view>
            <text>{{workLogData.startTime.Y||'未填写'}} </text>
            <text> {{workLogData.startTime.M||'未填写'}}至</text>
            <text  wx:if="{{workLogData.startTime.Y!==workLogData.endTime.Y}}">{{workLogData.endTime.Y||'未填写'}} </text>
            <text>{{workLogData.endTime.M||'未填写'}}</text>
          </view>
        </view>
        <view style="width:100%;">
          <text>日志所属人</text>
          <text>{{workLogData.employeeName||'未填写'}}</text>
        </view>
      </view>
      <view class="bold-line">
      </view>
      <view class="log-chunck2">
        <view>
          <text>日志内容</text>
          <text>{{workLogData.description||'未填写'}}</text>
        </view>
        <view>
          <text>备注内容</text>
          <text>{{workLogData.remark||'未填写'}}</text>
        </view>
      </view>
      <view class="bold-line">
      </view>
      <view class="log-chunck3">
        <view>
          <text>自报时长</text>
          <text>{{workLogData.selfDuration}}h</text>
        </view>
        <view>
          <text>业务时长</text>
          <text>{{workLogData.businessDuration}}h</text>
        </view>
        <view>
          <text>账单时长</text>
          <text>{{workLogData.billDuration}}h</text>
        </view>
      </view>
      <view class="bold-line">
      </view>
      <view class="log-chunck4" wx:if="{{workLogData.attachmentList!==null}}">
        <view>
          <text>日志文档</text>
          <icon class="iconfont icon-gengduo" style="font-size:40rpx;color:#dedede"/>
        </view>
        <view bindtap="toDocument">
          <icon class="iconfont icon-wendang" style="font-size:80rpx;color:#ff9900;margin-right:20rpx"/>
          <text>已上传{{workLogData.attachmentList.length}}个文档</text>
        </view>
      </view>
      <!-- <view class="bold-line">
        </view> -->
      <view class="log-chunck5" wx:if="{{avatar.length!==0}}">
        <view>
          <text>参与人</text>
          <!-- <icon class="iconfont icon-gengduo" style="font-size:40rpx;color:#dedede"></icon> -->
        </view>
        <!-- <repeat for="{{workLogData.approvalList}}" key="index" index="index" item="item"> -->
        <view>
          <block wx:for="{{avatar}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <image src="{{item}}" mode="scaleToFill" lazy-load="false" style="z-index:{{index}};background:#069400;left:{{index*30}}rpx">
            </image>
          </block>
        </view>
        <!-- </repeat> -->
      </view>
      <view class="bold-line">
      </view>
      <view class="log-chunck6" bindtap="toauditResultsDetail">
        <view>
          <text>审核结果</text>
          <icon class="iconfont icon-gengduo" style="font-size:40rpx;color:#dedede"/>
        </view>
        <view>
          <view style="color:{{workLogData.processStatus=='R'?'#e20000':workLogData.processStatus=='N'?'#FF9900':'#069400'}}">
            <text>{{workLogData.processStatusText||'未填写'}}</text>
          </view>
          <!-- <view wx:if="{{workLogData.processStatus=='R'}}">
            备注：{{workLogData.remark}}
          </view> -->
          <view>
            <text>通过{{workLogData.approvalList.length}}位审核人审核</text>
            <text>{{workLogData.approvalList[0].approvalDateText}}</text>
          </view>
        </view>
      </view>
    </view>
    <view class="chooseMe" wx:if="{{chooseMe}}">
      <view bindtap="deselect">
        <text>取消提示</text>
      </view>
      <view bindtap="chooseMe">
        <text>转为我的</text>
      </view>
    </view>
    <view class="auditBtn" wx:if="{{toAudit}}" style="opacity:{{addOpacity}} ;" bindtouchstart="touchStart" bindtouchend="touchEnd">
      <text>审核</text>
    </view>
  </view>