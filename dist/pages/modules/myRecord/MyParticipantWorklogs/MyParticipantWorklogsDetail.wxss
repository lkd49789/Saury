@import "./../../../../components/placeHolderImage.wxss";
.body {
  height: 100%;
}
.body .top-title {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 99;
}
.body .main {
  margin: 149rpx 28rpx 0 28rpx;
  font-size: 28rpx;
  color: #2a2a2a;
}
.body .main .items-container {
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
  margin-bottom: 44rpx;
}
.body .main .items-container > view:not(:first-child) {
  margin-bottom: 20rpx;
}
.body .main .items-container > view:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 36rpx;
}
.body .main .items-container > view:last-child {
  display: flex;
  align-items: center;
}
