@import "./../../../../components/placeHolderImage.wxss";
.body {
  height: 100%;
}
.body .top-title {
  height: 20%;
  background: #5d73fa;
  color: #fff;
  padding: 44rpx 28rpx;
  margin-bottom: 44rpx;
}
.body .top-title > view:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .top-title > view:first-child > view:last-child {
  display: flex;
  align-items: center;
}
.body .top-title > view:first-child .picker {
  display: flex;
  align-items: baseline;
}
.body .top-title > view:last-child {
  display: flex;
  justify-content: center;
  margin-top: 44rpx;
}
.body .top-title > view:last-child > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33%;
}
.body .top-title > view:last-child > view > text:last-child {
  font-size: 44rpx;
}
.body .main {
  margin: 0 28rpx;
}
.body .main > view:first-child {
  display: flex;
  flex-direction: row-reverse;
  color: #7a7a7a;
}
.body .main > view:first-child > view:last-child {
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .main > view:first-child > view:last-child > text {
  width: 25%;
  text-align: center;
}
.body .main .items-container > view {
  display: flex;
}
.body .main .items-container > view > view:first-child {
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .main .items-container > view > view:last-child {
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  border-bottom: 1px solid #dfdfdf;
}
.body .main .items-container > view > view:last-child > text {
  text-align: center;
  width: 25%;
}
.body .main .items-container > view > view:last-child > text:first-child {
  text-align: left;
}
