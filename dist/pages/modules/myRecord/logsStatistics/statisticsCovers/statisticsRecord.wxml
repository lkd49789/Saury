
    <view class="body">
        <view class="fixed-view">
            <!-- <scroll-view class='extra-word' scroll-y='{{isScroll}}'> -->
            <view class="case-top">
                <text class="title">日志统计</text>
            </view>
            <!-- 案件导航 -->
            
    <view class="navbar">
        <scroll-view scroll-x>
            <block wx:for="{{$navbar$navbars}}" wx:for-index="$navbar$index" wx:for-item="$navbar$item" wx:key="$navbar$index">
                <view class="item {{$navbar$currentTab == $navbar$index ? 'active' : ''}} " bindtap="$navbar$navbarTap" data-wpynavbartap-a="{{$navbar$index}}">
                    <text>{{$navbar$item}}</text>
                    <view  wx:if="{{$navbar$currentTab == $navbar$index}}" class="navbar_box"/>
                </view>
            </block>
        </scroll-view>
    </view>

            <!-- </scroll-view> -->
        </view>
        <view class="main"  wx:if="{{currentTab==0}}">
            <view class="canvas-content">
                <view>
                    
    <view class="option">
        <view>
            <text class="title">{{$year$options.title}}</text>
        </view>
        <picker bindchange="$year$bindPickerChange" value="{{$year$index}}" range="{{$year$options.displayText}}" name="{{$year$options.name}}">
            <view class="picker">
                <view>
                    <text>{{$year$options.displayText[$year$index]||'请选择'}}</text>
                </view>
                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
         <view  wx:if="{{$year$options.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>

                    
    <view class="option">
        <view>
            <text class="title">{{$category$options.title}}</text>
        </view>
        <picker bindchange="$category$bindPickerChange" value="{{$category$index}}" range="{{$category$options.displayText}}" name="{{$category$options.name}}">
            <view class="picker">
                <view>
                    <text>{{$category$options.displayText[$category$index]||'请选择'}}</text>
                </view>
                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
         <view  wx:if="{{$category$options.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>

                </view>
                <view style="height:900rpx;display:flex;align-items:center">
                    <canvas class="canvas" canvas-id="clientCanvas" style="height:700rpx;width:100%;" bindtouchstart="touchHandler" bindtouchmove="bindscroll" bindtouchend="touchEnd" disable-scroll="false"/>
                </view>
            </view>
            <view class="interval-chunk">
            </view>
            <view class="amount">
                <block wx:for="{{seriesData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                    <view>
                        <view style="background:{{item.color}}">
                            <text>{{item.name}}</text>
                        </view>
                        <view>
                            <text>客户总数：<text style="color:{{item.color}}">{{item.sum}}</text></text>
                        </view>
                    </view>
                </block>
            </view>
        </view>
        <view class="main"  wx:if="{{currentTab==1}}">
            <view class="canvas-content">
                <view>
                    
    <view class="option">
        <view>
