            </view>
            <view class="interval-chunk">
            </view>
            <view class="amount">
                <!-- <repeat for="{{pieSeriesData}}" key="index" index="index" item="item"> -->
                    <view>
                        <view style="background:#ff9900">
                            <text>{{categorys.displayText[categorysIndex]}}</text>
                        </view>
                        <view>
                            <text>客户总数：<text style="color:#ff9900">{{pieSeriesCount}}</text></text>
                        </view>
                    </view>
                <!-- </repeat> -->
            </view>
        </view>
        
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

    </view>