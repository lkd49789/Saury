@import "./../../../../../components/picker/option.wxss";
@import "./../../../../../components/navbar.wxss";
@import "./../../../../../components/placeHolderImage.wxss";
.body {
  height: 100%;
}
.body .fixed-view {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 999;
}
.body .fixed-view .case-top {
  height: 104rpx;
  line-height: 104rpx;
  padding: 0 28rpx;
  font-size: 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .main {
  margin-top: 230rpx;
}
.body .main .canvas-content > view:first-child {
  padding: 0rpx 28rpx 0rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.body .main .canvas-content > view:first-child > view {
  width: 40%;
  margin-bottom: 0;
}
.body .main .canvas-content > view:first-child > view .picker > view {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #5d73fa;
}
.body .main .interval-chunk {
  width: 100%;
  height: 15rpx;
  background: #f4f4f4;
}
.body .main .amount {
  padding: 30rpx 28rpx;
}
.body .main .amount > view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.body .main .amount > view > view:first-child {
  padding: 5rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.body .main .amount > view:not(:last-child) {
  margin-bottom: 20rpx;
}
