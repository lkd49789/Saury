.container {
  position: relative;
}
.container .calendar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: -1;
  transition: height .2s;
  color: #fff;
}
.container .calendar .calendar_content {
  margin: 44rpx 28rpx 0 0;
  position: absolute;
  z-index: 100;
  top: 0;
  width: 100%;
  height: 100%;
}
.container .calendar .calendar_content .picker > view {
  margin-left: 28rpx;
}
.container .calendar .calendar_content .picker .date-year {
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.container .calendar .calendar_content .picker .date-mouth {
  display: flex;
  align-items: center;
  font-size: 50rpx;
}
.container .calendar .calendar_content .date_header {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  margin-top: 20rpx;
}
.container .calendar .calendar_content .date-box {
  height: 50%;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.container .calendar .calendar_content .date-box .date-head {
  height: 60rpx;
  width: 14.285%;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}
.container .calendar .calendar_content .date-box .nowDay {
  width: 60rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #5D73FA;
  margin: 0 auto;
}
@keyframes opacity {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.container .calendar .calendar_content .animation {
  animation: opacity 1s linear;
}
.container .list-content {
  transition: height .2s;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
