
    <view class="body">
        <view class="fixed-view">
            <!-- <scroll-view class='extra-word' scroll-y='{{isScroll}}'> -->
            <view class="case-top">
                <text class="title">案件审核</text>
                <icon class="iconfont icon-sousuo1 " style="font-size:60rpx;color:#5d73fa" bindtap="toSearch"/>
            </view>
            <!-- 案件导航 -->
            
    <view class="navbar">
        <scroll-view scroll-x>
            <block wx:for="{{$navbar$navbars}}" wx:for-index="$navbar$index" wx:for-item="$navbar$item" wx:key="$navbar$index">
                <view class="item {{$navbar$currentTab == $navbar$index ? 'active' : ''}} " bindtap="$navbar$navbarTap" data-wpynavbartap-a="{{$navbar$index}}">
                    <text>{{$navbar$item}}</text>
                    <view  wx:if="{{$navbar$currentTab == $navbar$index}}" class="navbar_box"/>
                </view>
            </block>
        </scroll-view>
    </view>

            <!-- </scroll-view> -->
        </view>
        <view class="main"  wx:if="{{currentTab==0}}">
            <block wx:for="{{waitCreationsData.items}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view bindtap="toCaseDetailAudit" data-wpytocasedetailaudit-a="{{item.id}}">
                    <view>
                        <text>{{item.caseName||'未填写'}}</text>
                    </view>
                    <view>
                        <text>{{item.clientName||'未填写'}}</text>
                    </view>
                    <view>
                        <view>
                            <text>{{item.caseCategoryText||'未填写'}}</text>
                        </view>
                        <view>
                            <text>{{item.acceptDateText||'未填写'}}</text>
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <view class="main"  wx:if="{{currentTab==1}}">
            <block wx:for="{{alreadyCreationsData.items}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view bindtap="toCaseDetailAudit" data-wpytocasedetailaudit-a="{{item.id}}">
                    <view>
                        <text>{{item.caseName}}</text>
                    </view>
                    <view>
                        <text>{{item.clientName}}</text>
                    </view>
                    <view>
                        <view>
                            <text>{{item.caseCategoryText}}</text>
                        </view>
                        <view>
                            <text>{{item.acceptDateText}}</text>
                        </view>
                    </view>
                </view>
            </block>
        </view>
        
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

    </view>