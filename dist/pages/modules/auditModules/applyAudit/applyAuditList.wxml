
    <view class="body">
         <view class="top-title">
            <text class="title">请假审核</text>
            <icon  wx:if="{{waitData.length!==0}}" class="iconfont icon-sousuo1 " style="font-size:60rpx;color:#5d73fa" bindtap="toSearch"/>
         </view>
        <view class="main">
            <block wx:for="{{waitData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view class="item-content" bindtap="toApplyDetail" data-wpytoapplydetail-a="{{item.id}}">
                    <view>
                        <view>
                            <text>{{item.eName}} </text>
                            <text style="color:#7a7a7a">| {{item.eDepartment}}</text>
                        </view>
                        <view style="color:#ff9900">
                            <text>{{item.totalDay}}天</text>
                        </view>
                    </view>
                    <view>
                        <text>{{item.startDateText}}至{{item.endDateText}}</text>
                    </view>
                    <view class="memo">
                        <text>{{item.memo||'未填写'}}</text>
                    </view> 
                    <view class="wait">
                        <view style="background:#ff9900;border-radius:50%;height:30rpx;width:30rpx;margin-right:15rpx">
                        </view>
                        <text>{{item.vacationTypeText}}</text>
                    </view>   
                </view>
            </block>
            
        </view>
        
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

    </view>