@import "./../../../../components/placeHolderImage.wxss";
.body {
  height: 100%;
}
.body .top-title {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 48rpx;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 9999;
  display: flex;
  justify-content: space-between;
}
.body .top-title > text {
  margin-left: 28rpx;
}
.body .top-title > icon {
  margin-right: 28rpx;
}
.body .main {
  margin: 149rpx 28rpx 0 28rpx;
}
.body .main .item-content {
  margin: 44rpx 0;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
  padding: 30rpx 28rpx;
}
.body .main .item-content > view:not(:last-child):not(:first-child) {
  margin-bottom: 20rpx;
}
.body .main .item-content > view:first-child {
  margin-bottom: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .main .item-content > view:first-child > view:first-child {
  display: flex;
  align-items: center;
}
.body .main .item-content .wait {
  display: flex;
  align-items: center;
}
.body .main .item-content .ready {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .main .item-content .ready > view {
  display: flex;
  align-items: center;
}
.body .main .text-hidden {
  color: #7a7a7a;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
