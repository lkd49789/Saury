
    <view class="body">
        <view class="top-title">
            <text>文书审核</text>
        </view>
        <view class="main">
            <view class="checked">
                <radio-group class="radio-group" bindchange="bindPickerChang" style="padding-bottom:20rpx;">
                    <label class="radio"  wx:for="{{result}}" wx:key="index">
                        <view>
                            <radio value="{{item.value}}" checked="{{item.isSelected}}" color="#5d73fa"/>
                        <text style="margin-right:60rpx">{{item.displayText}}</text>
                        </view>
                    </label>
                </radio-group>
            </view>
            
<view>
     <view class="textarea"  wx:if="{{$remark$isShow}}">
        <view>
            <text>{{$remark$input.title}}</text>
        </view>
        <view class="textarea-container" style="border-bottom:1px solid {{$remark$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <textarea name="{{$remark$input.name}}" bindfocus="$remark$bindfocus" bindblur="$remark$bindblur" placeholder="请输入{{$remark$input.title}}" bindinput="$remark$bindinput" maxlength="-1" value="{{$remark$inputValue}}" auto-height cursor-spacing="5px" fixed="{{$remark$true}}" style="width:83%"/>
        </view>
        <view wx:if="{{$remark$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
    <view class="input"  wx:else>
        <view>
            <text>{{$remark$input.title}}</text>
        </view>
        <view class="input-container" style="border-bottom:1px solid {{$remark$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <input name="{{$remark$input.name}}" bindfocus="$remark$bindfocus" bindblur="$remark$bindblur" placeholder="请输入{{$remark$input.title}}" bindinput="$remark$bindinput" disabled="{{$remark$input.disabled}}" value="{{$remark$inputValue}}" type="{{$remark$input.type||'text'}}" confirm-type="done" cursor-spacing="5px"/>
        </view>
        <view wx:if="{{$remark$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
   
</view>
    

        </view>
        <image src="{{buttonImage}}" mode="scaleToFill" style="opacity:{{addOpacity}} ;" lazy-load="true" class="addImage" bindtouchstart="touchStart" bindtouchend="touchEnd"/>
    </view>