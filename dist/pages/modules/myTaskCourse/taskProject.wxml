
    <view class="body">
        <view class="top-title">
            <view class="flex">
                <view style="margin-left:28rpx">
                    <text>任务项目</text>
                </view>
                <view style="margin-right:28rpx">
                    <icon class="iconfont icon-sousuo1 " style="font-size:60rpx;color:#5d73fa;margin-right:14rpx" bindtap="toSearch"/>
                    <icon class="iconfont icon-shaixuan1" style="font-size:60rpx;color:#5d73fa" bindtap="ishowFilter"/>
                </view>
            </view>
            <!-- 案件导航 -->
            
    <view class="navbar">
        <scroll-view scroll-x>
            <block wx:for="{{$navbar$navbars}}" wx:for-index="$navbar$index" wx:for-item="$navbar$item" wx:key="$navbar$index">
                <view class="item {{$navbar$currentTab == $navbar$index ? 'active' : ''}} " bindtap="$navbar$navbarTap" data-wpynavbartap-a="{{$navbar$index}}">
                    <text>{{$navbar$item}}</text>
                    <view  wx:if="{{$navbar$currentTab == $navbar$index}}" class="navbar_box"/>
                </view>
            </block>
        </scroll-view>
    </view>

            <view class="filter animation"  wx:if="{{isShow}}">
                <view catchtap="filter" data-wpyfilter-a="cteateTime">创建时间排序</view>
            </view>
        </view>
        <view class="main"  wx:if="{{currentTab==0}}">
            <block wx:for="{{CasePrivateProject.items}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view bindtap="toTaskList" data-wpytotasklist-a="{{item.id}}" data-wpytotasklist-b="{{item.category}}">
                    <view>
                        <image src="{{CasePrivateProjectImage[index]}}" mode="scaleToFill" lazy-load="false">
                        </image>
                    </view>
                    <view>
                        <view>
                            <text>{{item.name}}</text>
                        </view>
                        <view>
                            <view>
                                <view style="background:{{item.caseTypeColor}}">
                                </view>
                                <text>{{item.categoryText}}</text>
                            </view>
                            <view>
                                <view>
                                    <icon class="iconfont icon-jieduan-copy" style="font-size:30rpx;color:#5d73fa"/>
                                    <text>{{item.stageCount}}</text>
                                </view>
                                <view>
                                    <icon class="iconfont icon-zirenwu-copy" style="font-size:32rpx;color:#5d73fa"/>
                                    <text>{{item.taskCount}}</text>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <view class="main" wx:if="{{currentTab==1}}">
            <block wx:for="{{CasePublicProject.items}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view bindtap="toTaskList" data-wpytotasklist-a="{{item.id}}" data-wpytotasklist-b="{{item.category}}">
                    <view>
                        <image src="{{CasePublicProjectImage[index]}}" mode="aspectFill" lazy-load="false">
                        </image>
                    </view>
                    <view>
                        <view>
                            <text>{{item.name}}</text>
                        </view>
                        <view>
                            <view>
                                <view style="background:{{item.caseTypeColor}}">
                                </view>
                                <text>{{item.categoryText}}</text>
                            </view>
                            <view>
                                <view>
                                    <icon class="iconfont icon-jieduan-copy" style="font-size:30rpx;color:#5d73fa"/>
                                    <text>{{item.stageCount}}</text>
                                </view>
                                <view>
                                    <icon class="iconfont icon-zirenwu-copy" style="font-size:32rpx;color:#5d73fa"/>
                                    <text>{{item.taskCount}}</text>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </block>
        </view>
        <image src="{{'../../../images/add.png'}}" mode="scaleToFill" lazy-load="true" class="addBtn" bindtap="createProject"/>
    </view>