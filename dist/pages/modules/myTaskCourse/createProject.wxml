
  <view class="container" id="container">
    <view class="page-title">
      创建项目
    </view>
    <view class="main">
      <view class="checkedBox">
        <view class="title">
          项目类别
        </view>
        <radio-group class="radio-group" bindchange="radioChange">
          <label  wx:for="{{Category}}" wx:key="index" index="index" item="item " class="label">
                          <radio value="{{item.id}}" name="id" color="#5d73fa"/> {{item.name}}
                      </label>
        </radio-group>
        <view class="warning"  wx:if="{{!subData.Category}}">
          此字段为必填字段！
        </view>
      </view>
      <view class="inputSearch" wx:if="{{subData.Category=='0'||subData.Category=='1'}}">
        <view class="title">
          客户名称
        </view>
        <view class="input-container" bindtap="chooseClientName">
          <input value="{{ClientIdValue}}" type="text" disabled="true" maxlength="140"/>
          <text wx:if="{{ClientIdValue}}" catchtap="deleteValue" data-wpydeletevalue-a="ClientIdValue">x</text>
        </view>
        <view class="warning" wx:if="{{subData.Category=='1'&&!ClientIdValue}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
      </view>
      <view class="inputSearch" wx:if="{{subData.Category=='0'}}">
        <view class="title">
          案件名称
        </view>
        <view class="input-container" bindtap="chooseCaseIdName">
          <input value="{{CaseIdValue}}" type="text" disabled="true" maxlength="140"/>
          <text wx:if="{{CaseIdValue}}" catchtap="deleteValue" data-wpydeletevalue-a="CaseIdValue">x</text>
        </view>
      </view>
      <view wx:if="{{subData.Category=='2'}}">
        
<view>
     <view class="textarea"  wx:if="{{$Name$isShow}}">
        <view>
            <text>{{$Name$input.title}}</text>
        </view>
        <view class="textarea-container" style="border-bottom:1px solid {{$Name$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <textarea name="{{$Name$input.name}}" bindfocus="$Name$bindfocus" bindblur="$Name$bindblur" placeholder="请输入{{$Name$input.title}}" bindinput="$Name$bindinput" maxlength="-1" value="{{$Name$inputValue}}" auto-height cursor-spacing="5px" fixed="{{$Name$true}}" style="width:83%"/>
        </view>
        <view wx:if="{{$Name$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
    <view class="input"  wx:else>
        <view>
            <text>{{$Name$input.title}}</text>
        </view>
        <view class="input-container" style="border-bottom:1px solid {{$Name$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <input name="{{$Name$input.name}}" bindfocus="$Name$bindfocus" bindblur="$Name$bindblur" placeholder="请输入{{$Name$input.title}}" bindinput="$Name$bindinput" disabled="{{$Name$input.disabled}}" value="{{$Name$inputValue}}" type="{{$Name$input.type||'text'}}" confirm-type="done" cursor-spacing="5px"/>
        </view>
        <view wx:if="{{$Name$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
   
</view>
    

      </view>
      <view class="upLoadImage">
        <view class="upLoadImage-contianer" bindtap="upLoadImage">
          <image src="{{CoverImage}}" mode="aspectFill" lazy-load="false" wx:if="{{CoverImage}}"/>
          <icon class="iconfont icon-xinjianzhuye" wx:else/>
        </view>
        <view class="title">
          上传新封面
        </view>
      </view>
      
<view>
     <view class="textarea"  wx:if="{{$Description$isShow}}">
        <view>
            <text>{{$Description$input.title}}</text>
        </view>
        <view class="textarea-container" style="border-bottom:1px solid {{$Description$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <textarea name="{{$Description$input.name}}" bindfocus="$Description$bindfocus" bindblur="$Description$bindblur" placeholder="请输入{{$Description$input.title}}" bindinput="$Description$bindinput" maxlength="-1" value="{{$Description$inputValue}}" auto-height cursor-spacing="5px" fixed="{{$Description$true}}" style="width:83%"/>
        </view>
        <view wx:if="{{$Description$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
    <view class="input"  wx:else>
        <view>
            <text>{{$Description$input.title}}</text>
        </view>
        <view class="input-container" style="border-bottom:1px solid {{$Description$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <input name="{{$Description$input.name}}" bindfocus="$Description$bindfocus" bindblur="$Description$bindblur" placeholder="请输入{{$Description$input.title}}" bindinput="$Description$bindinput" disabled="{{$Description$input.disabled}}" value="{{$Description$inputValue}}" type="{{$Description$input.type||'text'}}" confirm-type="done" cursor-spacing="5px"/>
        </view>
        <view wx:if="{{$Description$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
   
</view>
    

      <view class="checkedBox" style="border:0">
        <radio-group class="radio-group" bindchange="radioChangeTemplate">
          <label wx:for="{{inputTemplate}}" wx:key="index" index="index" item="item " class="label">
                          <radio value="{{item.value}}" checked="{{item.checked}}" name="id" color="#5d73fa"/> {{item.displayText}}
                      </label>
        </radio-group>
      </view>
      
    <view class="option">
        <view>
            <text class="title">{{$Privacy$options.title}}</text>
        </view>
        <picker bindchange="$Privacy$bindPickerChange" value="{{$Privacy$index}}" range="{{$Privacy$options.data}}" range-key="{{$Privacy$options.key}}" name="{{$Privacy$options.name}}" disabled="{{$Privacy$options.disabled}}">
            <view class="picker">
                <view>
                    <text>{{$Privacy$options.data[$Privacy$index][$Privacy$options.key]||'请选择'}}</text>
                </view>
                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
         <view  wx:if="{{$Privacy$options.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>

      <view class="multiSelector"  wx:if="{{subData.inputTemplate=='1'}}">
        <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{TemplateIdArrayIndex}}" range="{{TemplateIdArray}}">
          <view class="picker">
            <text>{{TemplateIdText||'请选择'}}</text>
            <icon class="iconfont icon-gengduoneirongdianjichakanxiangqing"/>
          </view>
        </picker>
      </view>
      <view wx:if="{{subData.inputTemplate=='0'}}">
        
    <view class="option">
        <view>
            <text class="title">{{$TemplateId$options.title}}</text>
        </view>
        <picker bindchange="$TemplateId$bindPickerChange" value="{{$TemplateId$index}}" range="{{$TemplateId$options.data}}" range-key="{{$TemplateId$options.key}}" name="{{$TemplateId$options.name}}" disabled="{{$TemplateId$options.disabled}}">
            <view class="picker">
                <view>
                    <text>{{$TemplateId$options.data[$TemplateId$index][$TemplateId$options.key]||'请选择'}}</text>
                </view>
                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
         <view  wx:if="{{$TemplateId$options.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>

      </view>
      <view class="checkedBox-appStage"  wx:if="{{applicationStages.length>0}}">
        <view class="title">
          模板阶段
        </view>
        <checkbox-group bindchange="checkboxChange" class="checkbox-group">
          <label wx:for="{{applicationStages}}" wx:key="index" index="index" item="item " class="label">
                <view><checkbox value="{{item.id}}" checked="{{item.checked}}" name="id" color="#5d73fa"/> {{item.name}}</view>
                <view>{{item.itemsCount}}</view>
          </label>
        </checkbox-group>
      </view>
    </view>
    <image class="btn-sub" src="../../../images/test.png" mode="scaleToFill" lazy-load="false" catchtap="SubmitData"/>
  </view>