.body {
  height: 100%;
}
.body .placeHolderImage {
  position: fixed;
  top: 106rpx;
  left: 0;
  height: 92%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  background: #fff;
}
.body .top-title {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 99;
}
.body .addBtn {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 99999;
}
.body .main .task-list {
  margin: 149rpx 15rpx 0 15rpx;
  border: 1px solid #dfdfdf;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.body .main .task-list > view:first-child {
  background: #dfdfdf;
  padding: 30rpx 20rpx;
  border-top-left-radius: 19rpx;
  border-top-right-radius: 19rpx;
}
.body .main .task-list > view:first-child > view:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .main .task-list > view:first-child > view:first-child > view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.body .main .task-list > view:first-child > view:first-child > view > view {
  display: flex;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ff9900;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
  margin-right: 50rpx;
  color: #ff9900;
}
.body .main .task-list > view:first-child > view:first-child > view icon {
  position: absolute;
  top: -10rpx;
  right: 0;
}
.body .main .task-list > view:first-child > view:last-child {
  margin: 20rpx 0;
}
.body .main .task-list .task-item {
  display: flex;
  padding: 0 28rpx;
  align-items: center;
  height: 100%;
  justify-content: space-between;
}
.body .main .task-list .task-item .item-info {
  padding: 33rpx 10rpx 33rpx 0;
  border-bottom: 1px solid #dfdfdf;
}
.body .main .task-list .task-item .item-info .item-title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.body .main .task-list .task-item .item-info .item-statistics {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .main .task-list .task-item .item-isAccept {
  margin-right: -27rpx;
  height: 158rpx;
  width: 38rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.body .main .task-list .task-item .item-isAccept > text {
  text-align: center;
}
.body .main .task-list > view:last-child > view:nth-child(1) {
  border-bottom: 0;
}
.body .main .task-list > view:last-child > view:nth-child(2) {
  border-bottom: 0;
}
.body .main .add-task {
  display: flex;
  margin: 0rpx 15rpx 0 15rpx;
  border: 1px solid #dfdfdf;
  border-top: 0;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding: 23rpx 28rpx;
  align-items: center;
  color: #7a7a7a;
}
.body .main .add-task > text:first-child {
  border: 1px dotted #dedede;
  font-size: 37rpx;
  padding: 0 14rpx;
  margin-right: 20rpx;
}
.body .loseColor {
  color: #7a7a7a !important;
}
.body .loseColor text {
  text-decoration: line-through;
}
