
    <view class="body">
        <view class="top-title">
            <text>任务阶段</text>
        </view>
        <view class="main">
            <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="min-height:{{viewHeight[current]}}rpx" circular="{{circular}}" previous-margin="30rpx" next-margin="30rpx" bindchange="bindchange" current="{{current}}">
                <block wx:for="{{TaskStagesDatas}}" wx:for-index="sIndex" wx:for-item="item" wx:key="index">
                    <swiper-item>
                        <view class="task-list">
                            <view>
                                <view>
                                    <text>{{item.name}}</text>
                                    <view>
                                        <view>
                                            <text>{{item.taskCount}}</text>
                                        </view>
                                        <icon class="iconfont icon-gengduoneirongdianjichakanxiangqing" catchtap="moreChoose" data-wpymorechoose-a="{{item}}" data-wpymorechoose-b="{{sIndex}}"/>
                                    </view>
                                </view>
                                <view>
                                    <text>{{item.remark||'未填写'}}</text>
                                </view>
                            </view>
                            <!-- <scroll-view scroll-y scroll-with-animation bindscroll="scroll" style="heihgt:500rpx;white-space:nowrap;"> -->
                            <block wx:for="{{TasksDatas[sIndex].items}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="task-item" bindtap="toTaskDetail" bindlongpress="longpress" data-wpytotaskdetail-a="{{item.id}}" data-wpytotaskdetail-b="{{index}}" data-wpytotaskdetail-c="{{sIndex}}" data-wpytotaskdetail-d="{{item.isAccept}}" data-wpytotaskdetail-e="{{item.isParticipant}}" data-wpylongpress-a="{{item.id}}" data-wpylongpress-b="{{index}}">
                                    <view style="margin-right:20rpx"  wx:if="{{item.isAccept=='Y'&&item.isParticipant=='Y'}}">
                                        <checkbox value="{{item.title}}" checked="{{item.checked}}" color="#5d73fa" catchtap="isChecked" data-wpyischecked-a="{{sIndex}}" data-wpyischecked-b="{{index}}" data-wpyischecked-c="{{item.checked}}" data-wpyischecked-d="{{item.id}}" data-wpyischecked-e=""/>
                                    </view>
                                    <view style="width:{{item.isAccept=='Y'?'86%':'97%'}};" class="{{item.checked?'loseColor':''}} item-info">
                                        <view class="item-title">
                                            <text>{{item.title||'未填写'}}</text>
                                        </view>
                                        <view class="item-statistics">
                                            <view style="color:#7a7a7a">
                                                <icon class="iconfont icon-riqi" style="font-size:30rpx;margin-right:20rpx"/>
                                                <text>{{item.endTime||'未填写'}}</text>
                                            </view>
                                            <view>
                                                <icon class="iconfont icon-fujian-copy" style="font-size:30rpx;color:#5d73fa;margin-right:20rpx"/>
                                                <text style="margin-right:20rpx">{{item.attachmentCount}}</text>
                                                <icon class="iconfont icon-zirenwu-copy" style="font-size:30rpx;color:#5d73fa;margin-right:20rpx"/>
                                                <text>{{item.checkItemCount}}</text>
                                            </view>
                                        </view>
                                    </view>
                                    <view class="item-isAccept" style="background:#ff9900"  wx:if="{{item.isAccept=='N'&&item.isParticipant=='Y'}}">
                                        <text>未确认</text>
                                    </view>
                                </view>
                            </block>
                        </view>
                        <view class="add-task" catchtap="addTask" data-wpyaddtask-a="{{item.projectId}}">
                            <text>+</text>
                            <text>新建任务</text>
                        </view>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <image src="{{'../../../../images/add.png'}}" mode="scaleToFill" lazy-load="true" class="addBtn" style="opacity:{{addOpacity}} ;" bindtouchstart="touchStart" bindtouchend="touchEnd"/>
    </view>