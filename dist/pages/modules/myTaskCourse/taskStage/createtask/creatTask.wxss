@import "./../../../../../components/picker/option.wxss";
@import "./../../../../../components/picker/input.wxss";
.body {
  height: 100%;
}
.body .top-title {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 99;
}
.body .main {
  margin: 149rpx 28rpx 0 28rpx;
}
.body .addImage {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 99;
}
.body .option {
  margin-bottom: 36rpx;
}
.body .option picker {
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}
.body .option picker .picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #7a7a7a;
}
.body .option picker .picker .part-items {
  position: relative;
  margin: 12rpx;
  border: 1px dotted #dedede;
  padding: 5rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .option picker .picker .part-items > icon {
  position: absolute;
  bottom: 23rpx;
  right: -21rpx;
}
.body .childTask {
  margin-bottom: 160rpx;
}
.body .childTask > view:first-child {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body .childTask > view:nth-child(2) {
  margin-bottom: 28rpx;
  display: flex;
  flex-direction: column;
}
.body .childTask > view:nth-child(2) > view {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.body .childTask > view:nth-child(2) > view .checkbox {
  margin-right: 20rpx;
}
.body .childTask > view:nth-child(2) .throught {
  text-decoration: line-through;
}
.body .childTask > view:last-child > input {
  border-bottom: 1px solid #dfdfdf;
}
.body .Tag {
  margin-bottom: 36rpx;
  position: relative;
  color: #7a7a7a;
}
.body .Tag > view:last-child {
  padding: 28rpx 0;
  border-bottom: 1px solid #dfdfdf;
}
.body .Tag > view:last-child .tagInput {
  display: flex;
  bottom: 0;
  left: 0;
}
.body .Tag > view:last-child .tagInput .tag-item {
  position: relative;
  margin: 12rpx;
  border: 1px dotted #dedede;
  padding: 5rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .Tag > view:last-child .tagInput .tag-item > icon {
  position: absolute;
  bottom: 23rpx;
  right: -21rpx;
}
