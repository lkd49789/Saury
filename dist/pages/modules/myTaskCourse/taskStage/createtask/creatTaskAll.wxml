    <view class="option">
        <view>
            <text class="title">{{$StageId$options.title}}</text>
        </view>
        <picker bindchange="$StageId$bindPickerChange" value="{{$StageId$index}}" range="{{$StageId$options.displayText}}" name="{{$StageId$options.name}}">
            <view class="picker">
                <view>
                    <text>{{$StageId$options.displayText[$StageId$index]||'请选择'}}</text>
                </view>
                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
         <view  wx:if="{{$StageId$options.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>

            
    <view class="tui-picker-content">
        <view>{{$StartTime$timeObj.title}}</view>
        <picker mode="multiSelector" value="{{$StartTime$dateTime}}" bindchange="$StartTime$changeDateTime" range="{{$StartTime$dateTimeArray}}" name="{{$StartTime$timeObj.name}}" disabled="{{$StartTime$timeObj.isChecked}}" bindcolumnchange="$StartTime$changeDateTimeColumn">
            <view class="tui-picker-detail" style="background:{{$StartTime$timeObj.isChecked?'#dfdfdf':''}}">
                  {{$StartTime$dateData[0]+'/'+$StartTime$dateData[1]+'/'+$StartTime$dateData[2]+' '+$StartTime$dateData[3]+':'+$StartTime$dateData[4]+':'+$StartTime$dateData[5]}}
                 <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
    </view>

            
