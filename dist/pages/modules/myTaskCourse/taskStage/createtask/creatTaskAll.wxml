<view>
     <view class="textarea"  wx:if="{{$Estimate$isShow}}">
        <view>
            <text>{{$Estimate$input.title}}</text>
        </view>
        <view class="textarea-container" style="border-bottom:1px solid {{$Estimate$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <textarea name="{{$Estimate$input.name}}" bindfocus="$Estimate$bindfocus" bindblur="$Estimate$bindblur" placeholder="请输入{{$Estimate$input.title}}" bindinput="$Estimate$bindinput" maxlength="-1" value="{{$Estimate$inputValue}}" auto-height cursor-spacing="5px" fixed="{{$Estimate$true}}" style="width:83%"/>
        </view>
        <view wx:if="{{$Estimate$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
    <view class="input"  wx:else>
        <view>
            <text>{{$Estimate$input.title}}</text>
        </view>
        <view class="input-container" style="border-bottom:1px solid {{$Estimate$inputChecked?'#5d73fa':'#dedede'}};color:#7a7a7a">
            <input name="{{$Estimate$input.name}}" bindfocus="$Estimate$bindfocus" bindblur="$Estimate$bindblur" placeholder="请输入{{$Estimate$input.title}}" bindinput="$Estimate$bindinput" disabled="{{$Estimate$input.disabled}}" value="{{$Estimate$inputValue}}" type="{{$Estimate$input.type||'text'}}" confirm-type="done" cursor-spacing="5px"/>
        </view>
        <view wx:if="{{$Estimate$input.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>
   
</view>
    

            
