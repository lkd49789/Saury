            <view class="childTask">
                <view>
                    <text>子任务</text>
                    <icon class="iconfont icon-xinjianzhuye" style="color:#7a7a7a;font-size:40rpx" bindtap="addChild"/>
                </view>
                <view>
                    <block wx:for="{{childTask}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view>
                            <checkbox class="checkbox" value="{{item.title}}" checked="{{item.checked}}" color="#5d73fa" catchtap="isCompleted" data-wpyiscompleted-a="{{index}}" data-wpyiscompleted-b="{{item.checked}}"/>
                            <text bindlongpress="deleteChild" style="color:#7a7a7a" class="{{throught[index]?'throught':''}}" data-wpydeletechild-a="{{index}}">{{item.title}}</text>
                        </view>
                    </block>
                </view>
                <view wx:if="{{isShowChild}}">
                    <input name="checkItems" value="" placeholder="请输入子任务名称" bindconfirm="childBindconfirm" bindinput="childBindinput" focus="true"/>
                </view>
            </view>
        </view>
        <image src="{{'../../../../../images/next.png'}}" mode="scaleToFill" lazy-load="true" class="addImage" style="opacity:{{addOpacity}};" bindtouchstart="touchStart" bindtouchend="touchEnd">
