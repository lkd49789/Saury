@import "./../../../components/placeHolderImage.wxss";
.body {
  height: 100%;
  position: relative;
}
.body .addImage {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 9999;
}
.body .top-title {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 9999;
}
.body .top-title .flex {
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 48rpx;
  border-bottom: 1px solid #dedede;
}
.body .top-title .filter {
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 99999;
  padding: 20rpx 28rpx 0 28rpx;
}
.body .top-title .filter > view {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}
.body .main {
  margin: 149rpx 28rpx 0 28rpx;
}
.body .main .meeting-item {
  padding: 30rpx 20rpx;
  margin-bottom: 44rpx;
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
}
.body .main .meeting-item > view:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 36rpx;
}
.body .main .meeting-item > view:first-child > view:first-child {
  overflow: hidden;
  /*超出部分隐藏*/
  white-space: nowrap;
  /*不换行*/
  text-overflow: ellipsis;
  /*超出部分文字以...显示*/
}
.body .main .meeting-item > view:first-child > view:last-child {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.body .main .meeting-item > view:not(:first-child):not(:last-child) {
  margin-bottom: 20rpx;
  color: #7a7a7a;
}
.body .main .meeting-item > view:nth-child(3) {
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.body .main .meeting-item > view:last-child {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.body .main .meeting-item > view:last-child > view:first-child {
  display: flex;
  align-items: center;
}
