@import "./../../../../components/picker/pickerOption.wxss";
@import "./../../../../components/picker/input.wxss";
@import "./../../../../components/Date/endDateTimePicker.wxss";
@import "./../../../../components/Date/nowDateTimePicker.wxss";
.body {
  height: 100%;
  position: relative;
}
.body .addImage {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 99;
}
.body .warming {
  color: #e20000;
}
.body .top-title {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 99;
}
.body .main {
  margin: 149rpx 28rpx 0 28rpx;
  position: relative;
}
.body .main .input {
  margin-bottom: 36rpx;
}
.body .main .input view:first-child {
  color: #2a2a2a;
}
.body .main .input .input-container {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 28rpx 0;
}
.body .main .input .input-container > input {
  width: 100%;
}
.body .main .option {
  margin-bottom: 36rpx;
}
.body .main .option picker {
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}
.body .main .option picker .picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #7a7a7a;
}
.body .main .option picker .picker .part-item {
  position: relative;
  margin: 10rpx;
  border: 1px dotted #dedede;
  padding: 5rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.body .main .option picker .picker .part-item > icon {
  position: absolute;
  bottom: 27rpx;
  right: -21rpx;
}
.body .main .option-image {
  margin-bottom: 30rpx;
  padding-bottom: 28rpx ;
  border-bottom: 1px solid #dfdfdf;
}
.body .main .option-image .picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #7a7a7a;
}
.body .main .option-image .picker > view:last-child {
  display: flex;
  align-items: baseline;
}
.body .main .showActionSheet {
  margin-bottom: 30rpx;
  padding-bottom: 28rpx ;
  border-bottom: 1px solid #dfdfdf;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #7a7a7a;
}
.body .main .checked {
  margin-bottom: 36rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #dfdfdf;
  padding-bottom: 28rpx ;
}
.body .main .checked > view {
  width: 50%;
}
