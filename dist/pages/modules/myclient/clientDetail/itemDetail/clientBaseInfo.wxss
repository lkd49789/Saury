@import "./../../../../../components/placeHolderImage.wxss";
.body {
  height: 100%;
}
.body .top-title {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 48rpx;
  padding-left: 28rpx;
  border-bottom: 1px solid #dedede;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 99;
}
.body .main {
  margin-top: 149rpx;
  font-size: 28rpx;
  color: #2a2a2a;
}
.body .main > view:first-child > view {
  padding: 0 28rpx 30rpx 28rpx;
}
.body .main > view:first-child > view > view:not(:last-child) {
  margin-bottom: 26rpx;
}
.body .main > view:first-child > view > view:first-child {
  margin-bottom: 30rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.body .main > view:first-child > view > view:nth-child(2) > view {
  display: flex;
  justify-content: space-between;
}
.body .main > view:first-child > view > view:nth-child(2) > view > text:first-child {
  width: 88%;
}
.body .main > view:first-child > view > view:nth-child(4) {
  display: flex;
}
.body .main > view:first-child > view > view:nth-child(4) > view {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  border: 1px solid #5d73fa;
  color: #5d73fa;
  padding: 10rpx 20rpx;
}
.body .main > view:first-child > view > view:nth-child(4) > view:not(:last-child) {
  margin-right: 30rpx;
}
.body .main > view:first-child > view > view:nth-child(5) {
  display: flex;
  align-items: baseline;
}
.body .main > view:first-child > view > view:nth-child(6) {
  display: flex;
  flex-direction: column;
}
.body .main > view:first-child > view > view:nth-child(6) > text:first-child {
  margin-bottom: 26rpx;
}
.body .main > view:not(:first-child) > view {
  padding: 30rpx 28rpx;
}
.body .main > view:nth-child(2) > view > view:not(:last-child) {
  margin-bottom: 26rpx;
}
.body .main > view:nth-child(2) > view > view {
  display: flex;
  align-items: center;
  color: #7a7a7a;
}
.body .main > view:nth-child(3) > view > view:not(:last-child) {
  margin-bottom: 36rpx;
}
.body .main > view:nth-child(3) > view > view {
  display: flex;
  flex-direction: column;
}
.body .main > view:nth-child(3) > view > view > text:first-child {
  margin-bottom: 20rpx;
  color: #7a7a7a;
}
.body .main > view:nth-child(4) > view > view:not(:last-child) {
  margin-bottom: 36rpx;
}
.body .main > view:nth-child(4) > view > view {
  display: flex;
  flex-direction: column;
}
.body .main > view:nth-child(4) > view > view > text:first-child {
  margin-bottom: 20rpx;
  color: #7a7a7a;
}
.body .main > view:nth-child(5) > view > view:not(:last-child) {
  margin-bottom: 36rpx;
}
.body .main > view:nth-child(5) > view > view {
  display: flex;
  flex-direction: column;
}
.body .main > view:nth-child(5) > view > view > text:first-child {
  margin-bottom: 20rpx;
  color: #7a7a7a;
}
.body .main > view:not(:last-child)::after {
  display: block;
  content: '';
  width: 100%;
  height: 7px;
  background: #f4f4f4;
}
