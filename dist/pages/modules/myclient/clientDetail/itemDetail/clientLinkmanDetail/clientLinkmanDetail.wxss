.body {
  height: 100%;
  font-size: 28rpx;
  color: #2a2a2a;
}
.body .linkman-header {
  padding-top: 44rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.body .linkman-header .linkman-avatar {
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
  margin-bottom: 34rpx;
}
.body .linkman-header .linkman-name {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 34rpx;
}
.body .linkman-header .linkman-name > text:first-child {
  font-size: 48rpx;
  margin-bottom: 14rpx;
}
.body .linkman-header .linkman-name > text:last-child {
  color: #7a7a7a;
}
.body .linkman-header .linkman-mode {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  border-top: 1px solid #bfbfbf;
  border-bottom: 1px solid #bfbfbf;
  padding: 30rpx 0;
}
.body .linkman-header .linkman-mode > view {
  width: 33%;
  display: flex;
  justify-content: center;
}
.body .linkman-header .linkman-mode > view:nth-child(2) {
  border-left: 1px solid #bfbfbf;
  border-right: 1px solid #bfbfbf;
}
.body .linkman-info {
  padding: 44rpx 28rpx;
}
.body .linkman-info .info-username {
  display: flex;
  padding-bottom: 30rpx;
  align-items: baseline;
  border-bottom: 1px solid #f4f4f4;
}
.body .linkman-info .info-username > text {
  margin-right: 20rpx;
}
.body .linkman-info > view:not(:first-child) {
  margin-top: 20rpx;
}
.body .linkman-info > view:not(:first-child) > text {
  margin-left: 20rpx;
}
.body .linkman-info > view:not(:first-child) .icon {
  font-size: 34rpx;
  color: #ff9900;
}
