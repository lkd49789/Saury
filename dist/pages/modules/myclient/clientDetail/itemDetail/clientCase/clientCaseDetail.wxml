
    <view class="body">
        <view class="top-title">
            <text>相关案件</text>
        </view>
        <view class="main">
            <view class="case-detail" bindtap="toCaseBaseInfo">
                <view>
                    <text>{{caseDetailData.clientName||'未填写'}}</text>
                    <icon class="iconfont icon-gengduo" style="font-size:30rpx;color:#7a7a7a"/>
                </view>
                <view>
                    <text style="color:#7a7a7a">{{caseDetailData.clientId||'未填写'}}</text>
                </view>
                <view>
                    <text>{{caseDetailData.categoryText||'未填写'}}</text>
                </view>
                <view>
                    <text>{{caseDetailData.statusText||'未填写'}}</text>
                </view>
            </view>
            <view class="case-abstract" bindtap="toCaseAbstract"  wx:if="{{caseDetailData.description}}">
                <view>
                    <text>案件简介</text>
                    <icon class="iconfont icon-gengduo" style="font-size:30rpx;color:#7a7a7a"/>
                </view>
                <view>
                    <text>{{caseDetailData.description||'未填写'}}</text>
                </view>
            </view>
            <view class="placeHolderText"  wx:else="{{caseDetailData.description}}">
                <text>暂无案情简介</text>
            </view>
            <view class="case-avatar" bindtap="toCaseLinkman" wx:if="{{caseAvatar}}">
                <view>
                    <text style="color:#7a7a7a">案件人员信息</text>
                    <icon class="iconfont icon-gengduo" style="font-size:30rpx;color:#7a7a7a"/>
                </view>
                <view>
                    <block wx:for="{{caseAvatar}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view class="avatar" style="z-index:{{index+1}};left:{{index*35}}rpx">
                            <image src="{{item}}" mode="scaleToFill" lazy-load="false" style="height:60rpx;width:60rpx;border-radius: 50%;">
                            </image>
                        </view>
                    </block>
                </view>
            </view>
            <view class="placeHolderText" wx:else="{{caseAvatar}}">
                <text>暂无案情简介</text>
            </view>
            <view class="case-conflict" bindtap="toCaseConflict">
                <view>
                    <text style="color:#7a7a7a">利益冲突</text>
                    <icon class="iconfont icon-gengduo" style="font-size:30rpx;color:#7a7a7a"/>
                </view>
                <view>
                    <text style="color:#2a2a2a">公司名称</text>
                </view>
                <view>
                    <text>相关利益在第三方</text>
                    <text>共5条冲突信息</text>
                </view>
            </view>
            <view class="case-contractInfo" bindtap="toCaseContractInfo">
                <view>
                    <text style="color:#7a7a7a">合同信息</text>
                    <icon class="iconfont icon-gengduo" style="font-size:30rpx;color:#7a7a7a"/>
                </view>
                <view>
                    <text style="color:#2a2a2a">案件办案费用由：</text>
                </view>
                <view>
                    <text>办案费限额：</text>
                </view>
                <view>
                    <text>收费方式：</text>
                </view>
            </view>
        </view>
        
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

    </view>