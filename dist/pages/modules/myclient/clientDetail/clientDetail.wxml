
    <view class="body">
        <view class="top-title">
            <text>客户信息</text>
        </view>
        <view class="main">
            <view class="client-detail" bindtap="toClientBaseInfo">
                <view>
                    <text>{{clientData.name||'未填写'}}</text>
                    <icon class="iconfont icon-gengduo" style="font-size:30rpx;color:#7a7a7a"/>
                </view>
                <view>
                    <text style="color:#7a7a7a">{{clientData.id||'未填写'}}</text>
                </view>
                <view>
                    <text>{{clientData.industryTypeText||'未填写'}}</text>
                </view>
                <view>
                    <icon class="iconfont icon-dizhi" style="font-size:40rpx;color:#5d73fa"/>
                    <text>{{clientData.address||'未填写'}}</text>
                </view>
            </view>
            <view class="client-avatar"  wx:if="{{contactsListData.length>0}}" bindtap="toClientLinkman">
                <view>
                    <text style="color:#7a7a7a">客户联系人</text>
                    <icon class="iconfont icon-gengduo" style="font-size:30rpx;color:#7a7a7a"/>
                </view>
                <view wx:if="{{contactsListData.length>1}}" class="avatarList">
                    <block wx:for="{{contactsListData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view class="avatar" style="z-index:{{index+1}};left:{{index*35}}rpx">
                            <image src="{{item.avatar}}" mode="scaleToFill" lazy-load="false" style="height:60rpx;width:60rpx;border-radius: 50%;"/>
                        </view>
                    </block>
                </view>
                <view wx:else class="client-one">
                     <image src="{{contactsListData[0].avatar}}" mode="scaleToFill" lazy-load="false" style="height:60rpx;width:60rpx;border-radius: 50%;"/>
                    <view>
                        <view>
                            <text style="color:#2a2a2a">{{contactsListData[0].name||'未填写'}} | </text>
                            <text>{{contactsListData[0].dutyText||'未填写'}}</text>
                        </view>
                        <view>{{contactsListData[0].enName||'未填写'}}</view>
                    </view>
                </view>
            </view>
            <view class="placeHolderText"  wx:else>
                    <text>暂无客户联系人</text>
            </view>
            <view class="link-project" wx:if="{{CaseManageTotalCount!==0}}" bindtap="toClientCaseMange">
                <view>
                    <text style="color:#7a7a7a">关联项目</text>
                    <icon class="iconfont icon-gengduo" style="font-size:30rpx;color:#7a7a7a"/>
                </view> 
                <view style="color:#5d73fa">
                    <text>共有{{CaseManageTotalCount}}个关联案件</text>
                </view> 
            </view>
            <view class="placeHolderText" wx:else="{{CaseManageTotalCount!==0}}">
                <text>暂无关联项目</text>
            </view>
            <view class="client-records" wx:if="{{RecordsDataCount!==0}}" bindtap="toRecordsList">
                <view>
                    <text>拜访记录</text>
                     <icon class="iconfont icon-gengduo" style="font-size:30rpx;"/>
                </view>
                <view>
                    <text>{{RecordsDate.startDate}}</text>至<text>{{RecordsDate.endDate}}</text>
                </view>
                <view>
                    <view>
                         <view style="height:20rpx;width:20rpx;border-radius:50%;border:1px solid #5d73fa;margin-right:20rpx">
                        </view>
                        <text>社交软件</text>
                    </view>
                   <view>
                       <text style="color:#ff9900">共{{RecordsDataCount}}条记录</text>
                   </view>
                </view>
            </view>
            <view class="placeHolderText" wx:else="{{RecordsDataCount!==0}}">
                <text>暂无拜访记录</text>
            </view>
        </view> 
        
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

    </view>