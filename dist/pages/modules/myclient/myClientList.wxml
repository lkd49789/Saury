
    <view class="body">
        <view class="top-title">
            <view class="flex">
                <view style="margin-left:28rpx">
                    <text  wx:if="{{IsAll}}">客户管理</text>
                    <text  wx:else>我的客户</text>
                </view>
                <view style="margin-right:28rpx">
                    <icon class="iconfont icon-sousuo1 " style="font-size:60rpx;color:#5d73fa;margin-right:14rpx" bindtap="toSearchPage"/>
                    <icon class="iconfont icon-shaixuan1" style="font-size:60rpx;color:#5d73fa" bindtap="ishowFilter"/>
                </view>
            </view>
            <view class="filter animation" wx:if="{{isShow}}">
                <view catchtap="filter" data-wpyfilter-a="cteateTime">创建时间排序</view>
                <view catchtap="filter" data-wpyfilter-a="id">客户编号排序</view>
                <view wx:if="{{!IsAll}}" catchtap="filter" data-wpyfilter-a="name">客户名称排序</view>
                <view catchtap="filter" data-wpyfilter-a="importLevel">重要级别排序</view>
            </view>
        </view>
        <view class="clientList-container">
            <view class="client-top" bindtap="toRecordClient" wx:if="{{clientStatisticsIsShow}}">
                <view class="client-sum">
                    <text>客户总数</text>
                    <text style="font-size:44rpx;color:#5d73fa;margin-top:20rpx;">{{AnnualCountsClient.value}}</text>
                </view>
                <view class="client-year">
                    <view class="Down">
                        <text>去年减少 |</text>
                        <text style="color:#069400"> {{AnnualCountsClient.annualData[1].value}}</text>
                    </view>
                    <view class="year-over-year">
                        <text>今年增加 |</text>
                        <text style="color:#ff9900"> {{AnnualCountsClient.annualData[0].value}}</text>
                    </view>
                </view>
                <view class="icon">
                    <icon class="iconfont icon-gengduo" style="font-size:40rpx;color:#dedede"/>
                </view>
            </view>
            <view class="viewHeight">
                <block wx:for="{{clientsData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                    <view class="client-list" bindtap="toClientDetail" data-wpytoclientdetail-a="{{index}}">
                        <view class="list-top">
                            <view>
                                <text style="color:#2a2a2a">{{item.name||'未填写'}}</text>
                            </view>
                            <view style="display:flex;align-items:center">
                                <view style="height:20rpx;width:20rpx;border-radius:50%;background:{{item.bgcolor||'#7a7a7a'}};margin-right:10rpx">
                                </view>
                                <view>
                                    <text>{{item.clientTypeText||'未填写'}}</text>
                                </view>
                            </view>
                        </view>
                        <view class="list-center">
                            客户来源：{{item.originText}}
                        </view>
                        <view class="list-bottom">
                            <view>
                                所属人：{{item.creationUserName||'未填写'}}
                            </view>
                            <view>
                                {{item.importLevelText||'未填写'}}
                            </view>
                        </view>
                    </view>
                </block>
            </view>
        </view>
        <!-- 展位图 -->
        
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

        <image src="{{'../../../images/add.png'}}" mode="scaleToFill" lazy-load="true" class="fixed-right-bottom-btn" bindtap="toCreateClientPage"/>
    </view>