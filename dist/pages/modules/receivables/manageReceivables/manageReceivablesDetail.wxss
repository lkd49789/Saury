@import "./../../../../components/picker/input.wxss";
.bill .bill_title {
  height: 104rpx;
  line-height: 104rpx;
  padding-left: 28rpx;
  font-size: 48rpx;
  position: relative;
  border-bottom: 1px solid #dedede;
}
.bill .warning {
  color: #e20000;
}
.bill .bill_content {
  background: #ffffff;
  margin: 0 auto;
  padding: 44rpx 28rpx 34rpx 28rpx;
  font-size: 28rpx;
  overflow: auto;
  border-bottom: 20rpx solid #f2f2f2;
}
.bill .bill_content:last-child {
  border-bottom: 0;
}
.bill .bill_content .caseConflictBorder_radius {
  border: 1px solid;
  width: 15rpx;
  height: 15rpx;
  line-height: 28rpx;
  border-radius: 15rpx;
  margin-right: 10rpx;
  display: inline-block;
}
.bill .bill_content .bill_box {
  margin: 20rpx 0;
}
.bill .bill_content .bill_box .bill_view {
  line-height: 42rpx;
}
.bill .bill_content .bill_box2 {
