}
.bill .bill_content image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.bill .bill_content .bill_x {
  padding: 24rpx 28rpx 24rpx 28rpx;
  background: #f2f2f2;
  margin: 15rpx 0;
  border-radius: 20rpx;
}
.bill .bill_content .bill_gray {
  color: #7a7a7a;
  border-color: #7a7a7a;
}
.bill .bill_content .bill_blue {
  color: #009dff;
  border-color: #009dff;
}
.bill .bill_content .bill_red {
  color: #e20000;
  border-color: #e20000;
}
.bill .bill_content .bill_yellow {
  color: #ff9900;
  border-color: #ff9900;
}
.bill .bill_content .bill_green {
  color: #069400;
  border-color: #069400;
}
.bill .bill_content .bill_state {
  float: right;
  position: relative;
}
