
    <view class="bill">
        <view  wx:if="{{!isShowPage}}">
            <view style="height:160rpx"/>
            <view class="bill_title">
                <text class="title">请选择关联案件</text>
                <view class="search_top">
                    <view class="search_input">
                        <icon class="iconfont icon-sousuo1 input_sousuo" style="color:#5d73fa;font-size:24px;"/>
                        <input value="{{searchClentValue}}" type="text" confirm-type="search" placeholder="搜索关键字" placeholder-class="placeholder" maxlength="30" bindconfirm="submitSearch" focus="true">
                        </input>
                    </view>
                    <view class="top_right_btn">
                        <icon bindtap="isShowPage" class="iconfont icon-gaojisousuo" style="color:#5d73fa;font-size:35px;"/>
                    </view>
                </view>
            </view>
            <block wx:for="{{myinvoice}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view class="bill_content" bindtap="into" data-wpyinto-a="{{item}}">
                    <view class="bill_box">
                        <view class="bill_view bill_blue">{{item.name}}</view>
                        <view class="bill_view bill_gray">{{item.serialId}}</view>
                    </view>
                    <view class="bill_box">
                        <view class="bill_view bill_blue">{{item.clientName}}</view>
                        <view class="bill_view bill_gray">{{item.clientId}}</view>
                    </view>
                </view>
            </block>
            
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

        </view>
        <view class="advanced-search-input-panel"  wx:else>
            <view class="advanced-search-title">
                <text>高级搜索</text>
                <icon class="iconfont icon-zirenwushanchu" bindtap="isShowPage"/>
            </view>
            <view class="advanced-search-content">
                  
    <view class="option">
        <view>
            <text class="title">{{$organizationUnitId$options.title}}</text>
        </view>
        <picker bindchange="$organizationUnitId$bindPickerChange" value="{{$organizationUnitId$index}}" range="{{$organizationUnitId$options.data}}" range-key="{{$organizationUnitId$options.key}}" name="{{$organizationUnitId$options.name}}" disabled="{{$organizationUnitId$options.disabled}}">
            <view class="picker">
                <view>
                    <text>{{$organizationUnitId$options.data[$organizationUnitId$index][$organizationUnitId$options.key]||'请选择'}}</text>
                </view>
                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
         <view  wx:if="{{$organizationUnitId$options.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>

                  
    <view class="picker-date">
        <view>{{$acceptDateRange$pickerData.title}}</view>
        <view style="display:flex;align-items:center;">
            <picker id="startDate" mode="date" value="{{$acceptDateRange$pickerData.startDateData}}" start="2000-01-01" end="2050-12-31" bindchange="$acceptDateRange$bindDateChange" style="flex:1">
                <view class="tui-picker-detail">
                    {{$acceptDateRange$pickerData.startDateData||'请选择'}}
                    <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                </view>
            </picker>
            <text style="margin:0 20rpx">至</text>
            <picker id="endDate" mode="date" value="{{$acceptDateRange$pickerData.endDateData}}" start="2000-01-01" end="2050-12-31" bindchange="$acceptDateRange$bindDateChange" style="flex:1">
                <view class="tui-picker-detail">
                    {{$acceptDateRange$pickerData.endDateData||'请选择'}}
                    <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                </view>
            </picker>
        </view>
    </view>

                
    <view class="option">
        <view>
            <text class="title">{{$category$options.title}}</text>
        </view>
        <picker bindchange="$category$bindPickerChange" value="{{$category$index}}" range="{{$category$options.data}}" range-key="{{$category$options.key}}" name="{{$category$options.name}}" disabled="{{$category$options.disabled}}">
            <view class="picker">
                <view>
                    <text>{{$category$options.data[$category$index][$category$options.key]||'请选择'}}</text>
                </view>
                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
         <view  wx:if="{{$category$options.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>

            </view>
            <image class="btn-sub" src="../../../../images/test.png" mode="scaleToFill" lazy-load="false" catchtap="submitData"/>
        </view>
    </view>