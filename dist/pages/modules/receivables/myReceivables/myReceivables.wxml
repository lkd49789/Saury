        <view class="top-title">
            <view class="flex">
                <view style="margin-left:28rpx">
                    <text>我的收款</text>
                </view>
                <view style="margin-right:28rpx">
                    <icon class="iconfont icon-sousuo1 " style="font-size:60rpx;color:#5d73fa;margin-right:14rpx" bindtap="toSearch"/>
                    <icon class="iconfont icon-shaixuan1" style="font-size:60rpx;color:#5d73fa" bindtap="isshowFilter"/>
                </view>
            </view>
            
    <view class="navbar">
        <scroll-view scroll-x>
            <block wx:for="{{$navbar$navbars}}" wx:for-index="$navbar$index" wx:for-item="$navbar$item" wx:key="$navbar$index">
                <view class="item {{$navbar$currentTab == $navbar$index ? 'active' : ''}} " bindtap="$navbar$navbarTap" data-wpynavbartap-a="{{$navbar$index}}">
                    <text>{{$navbar$item}}</text>
                    <view  wx:if="{{$navbar$currentTab == $navbar$index}}" class="navbar_box"/>
                </view>
            </block>
        </scroll-view>
    </view>

            <view class="filter animation"  wx:if="{{isShow}}">
                <view catchtap="filter" data-wpyfilter-a="cteateTime">创建时间排序</view>
                <view catchtap="filter" data-wpyfilter-a="case">案件排序</view>
            </view>
        </view>
        <view style="margin-top:230rpx">
            <block wx:for="{{myinvoice}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view class="bill_content" bindtap="into" data-wpyinto-a="{{item}}">
                    <view class="bill_view">{{item.caseName}}</view>
                    <view class="bill_view bill_gray">发票编号：{{item.invoiceNo?item.invoiceNo:''}}</view>
                    <view class="bill_view bill_gray">收款金额｜<text class="bill_blue">{{item.payAmount}}({{item.payCurrency}})</text></view>
                    <view class="bill_view bill_gray ">{{item.creationTime}}
                        <view class="bill_state {{item.statusName=='待分配'?'bill_green':'bill_yellow'}}">
                            <view class="caseConflictBorder_radius"/>{{item.statusName}}</view>
                    </view>
                </view>
            </block>
        </view>
        
    <view  wx:if="{{$placeHolderImage$placeHolder.placeHolderShow}}" class="placeHolderImage" catchtouchmove="$placeHolderImage$true">
                <image src="{{$placeHolderImage$placeHolderImage[$placeHolderImage$placeHolder.placeHolderImageIndex]}}" mode="scaleToFill" lazy-load="false" style="width:580rpx;height:580rpx">
                </image>
    </view>

