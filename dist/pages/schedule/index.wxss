}
.container .schedule_content .plan .plan_right .plan_firstLine .yellow {
  color: #ff9900;
}
.container .schedule_content .plan .plan_right .plan_firstLine .green {
  color: #069400;
}
.container .schedule_content .plan .plan_right .plan_lastLine {
  color: #b2b2b2;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}
.container .schedule_content .plan .plan_right .plan_lastLine > text:first-child {
  overflow: hidden;
  /*超出部分隐藏*/
  white-space: nowrap;
  /*不换行*/
  text-overflow: ellipsis;
  /*超出部分文字以...显示*/
  width: 62%;
}
.container .schedule_content .plan .plan_right .plan_lastLine .ifwait {
  float: right;
  color: #5d73fa;
}
.container .schedule_content .journal .journal_box {
