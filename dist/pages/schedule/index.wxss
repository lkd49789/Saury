@import "./../../components/navbar.wxss";
@import "./../../components/placeHolderImage.wxss";
.container {
  position: relative;
}
.container .calendar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: -1;
  transition: height .2s;
  color: #fff;
}
.container .calendar .calendar_content {
  margin: 44rpx 28rpx 0 0;
  position: absolute;
  z-index: 100;
  top: 0;
  width: 100%;
}
.container .calendar .calendar_content .picker > view {
  margin-left: 28rpx;
}
.container .calendar .calendar_content .picker .date-year {
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.container .calendar .calendar_content .picker .date-mouth {
  display: flex;
  align-items: center;
  font-size: 50rpx;
}
.container .calendar .calendar_content .date_header {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  margin-top: 20rpx;
}
.container .calendar .calendar_content .date-boxs {
  position: relative;
}
.container .calendar .calendar_content .date-boxs .dateCenter {
  left: 0;
}
.container .calendar .calendar_content .date-boxs .dateLeft {
  left: -500px;
}
.container .calendar .calendar_content .date-boxs .dateRIght {
  left: 500px;
}
.container .calendar .calendar_content .date-boxs .date-box {
  height: 50%;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.container .calendar .calendar_content .date-boxs .date-box .date-head {
  height: 60rpx;
  width: 14.285%;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  position: relative;
}
.container .calendar .calendar_content .date-boxs .date-box .nowDay {
  width: 60rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #5D73FA;
  margin: 0 auto;
}
.container .calendar .calendar_content .date-boxs .date-box .hasDay::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 0);
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
}
@keyframes opacity {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.container .calendar .calendar_content .animation {
  animation: opacity 1s linear;
}
.container .list-content {
  transition: height .2s;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.container .list-content .time {
  font-size: 28rpx;
  color: #b2b2b2;
  padding: 10rpx 28rpx;
  border-bottom: 1px solid #dedede;
}
.container .schedule_content {
  background: #ffffff;
  margin: 0 auto;
  margin-top: 46rpx;
  box-shadow: 0rpx 8rpx 30rpx 0rpx rgba(65, 98, 213, 0.25);
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
  margin: 44rpx 28rpx;
}
.container .schedule_content > view {
  font-size: 28rpx;
  color: #2a2a2a;
}
.container .schedule_content .task {
  margin: 30rpx 0;
}
.container .schedule_content .task .task_fr {
  float: right;
}
.container .schedule_content .task-item {
  height: 180rpx;
  font-size: 28rpx;
  background: #f4f4f4;
  padding: 0rpx 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.container .schedule_content .task-item .task-item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.container .schedule_content .task-item .task-item-top .task-item-right {
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .schedule_content .task-item .task-item-top .task-item-right .task-count {
  height: 30rpx;
  width: 30rpx;
  color: #ff9900;
  border: 1px solid #ff9900;
  margin-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  padding: 6rpx;
}
.container .schedule_content .task-content-container {
  padding: 0 28rpx;
  font-size: 28rpx;
  color: #2a2a2a;
}
.container .schedule_content .task-content-container .task-content {
  display: flex;
  align-items: center;
  position: relative;
}
.container .schedule_content .task-content-container .task-content .task-content-right {
  width: 85%;
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  border-bottom: 1px solid #f4f4f4;
}
.container .schedule_content .task-content-container .task-content .task-content-right .task-content-right-top {
  margin-bottom: 14rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.container .schedule_content .task-content-container .task-content .task-content-right .task-content-right-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .schedule_content .task-content-container .task-content .task-content-right .task-content-right-bottom .bottom-left {
  width: 67%;
