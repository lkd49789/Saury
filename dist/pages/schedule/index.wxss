}
.container .schedule_content .task-content-container .task-content .task-content-right .task-content-right-bottom .bottom-left > text {
  margin-left: 20rpx;
}
.container .schedule_content .task-content-container .task-content .task-content-right .task-content-right-bottom .bottom-right > text {
  margin-left: 20rpx;
}
.container .schedule_content .plan .plan_left {
  float: left;
  padding-right: 28rpx;
  border-right: 1px solid #dedede;
}
.container .schedule_content .plan .plan_left .plan_timeFirst {
  display: block;
  padding-bottom: 8rpx;
}
.container .schedule_content .plan .plan_left .plan_timeLast {
  font-size: 24rpx;
  color: #b2b2b2;
