
    <view class="body">
        <view class="top-title">
            <text>创建日程</text>
        </view>
        <view class="main">
            <view class="input">
                <view>
                    <text>日程标题</text>
                </view>
                <view class="input-container" style="border-bottom:1px solid {{inputChecked[0]?'#5d73fa':'#dedede'}};color:#7a7a7a">
                    <input id="Title" name="Title" bindfocus="bindfocus" bindblur="bindblur" placeholder="请输入日程标题" bindinput="bindinput" data-wpybindfocus-a="{{0}}" data-wpybindblur-a="{{0}}"/>
                </view>
                <view class="warming"  wx:if="{{warning[0]}}">
                    <text>日程标题字段是必需的</text>
                </view>
            </view>
            <view class="option">
                <view>
                    <text>日程类型</text>
                </view>
                <picker bindchange="bindPickerChange" value="{{categoryCombobox.index}}" range="{{categoryCombobox.displayText}}" name="Category" data-wpybindpickerchange-a="categoryCombobox">
                    <view class="picker">
                        <view>
                            <text>{{categoryCombobox.displayText[categoryCombobox.index]}}</text>
                        </view>
                        <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                    </view>
                </picker>
                <view class="warming"  wx:if="{{warning[1]}}">
                    <text>日程类型字段是必需的</text>
                </view>
            </view>
            <view class="option">
                <view>
                    <text>日程事件类型</text>
                </view>
                <picker bindchange="bindPickerChange" value="{{eventTypeCombobox.index}}" range="{{eventTypeCombobox.displayText}}" name="Category" data-wpybindpickerchange-a="eventTypeCombobox">
                    <view class="picker">
                        <view>
                            <text>{{eventTypeCombobox.displayText[eventTypeCombobox.index]}}</text>
                        </view>
                        <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                    </view>
                </picker>
            </view>
            <view class="input">
                <view>
                    <text>日程描述</text>
                </view>
                <view class="input-container" style="border-bottom:1px solid {{inputChecked[1]?'#5d73fa':'#dedede'}};color:#7a7a7a">
                    <textarea id="Describe" name="Describe" bindfocus="bindfocus" bindblur="bindblur" placeholder="请添加描述" bindinput="bindinput" auto-height data-wpybindfocus-a="{{1}}" data-wpybindblur-a="{{1}}"/>
                </view>
                <view class="warming" wx:if="{{warning[2]}}">
                    <text>日程描述字段是必需的</text>
                </view>
            </view>
            <view class="input">
                <view>
                    <text>添加备注</text>
                </view>
                <view class="input-container" style="border-bottom:1px solid {{inputChecked[2]?'#5d73fa':'#dedede'}};color:#7a7a7a">
                    <textarea id="Remark" name="Remark" bindfocus="bindfocus" bindblur="bindblur" placeholder="请添加备注" bindinput="bindinput" auto-height data-wpybindfocus-a="{{2}}" data-wpybindblur-a="{{2}}"/>
                </view>
            </view>
            <view class="option" wx:if="{{ifShowCustomer}}">
                <view>
                    <text>客户名称</text>
                </view>
                <picker bindchange="bindPickerChange" value="{{RelationId.index}}" range="{{RelationId.displayText}}" name="Category" data-wpybindpickerchange-a="RelationId">
                    <view class="picker">
                        <view>
                            <text>{{RelationId.displayText[RelationId.index]}}</text>
                        </view>
                        <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                    </view>
                </picker>
            </view>
            <view class="option" wx:if="{{ifShowCustomer}}">
                <view>
                    <text>案件名称</text>
                </view>
                <picker bindchange="bindPickerChange" value="{{CaseId.index}}" range="{{CaseId.displayText}}" name="Category" data-wpybindpickerchange-a="CaseId">
                    <view class="picker">
                        <view>
                            <text>{{CaseId.displayText[CaseId.index]}}</text>
                        </view>
                        <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                    </view>
                </picker>
            </view>
            
    <view class="tui-picker-content">
        <view>{{$StartTime$timeObj.title}}</view>
        <picker mode="multiSelector" value="{{$StartTime$dateTime}}" bindchange="$StartTime$changeDateTime" range="{{$StartTime$dateTimeArray}}" name="{{$StartTime$timeObj.name}}" disabled="{{$StartTime$timeObj.isChecked}}" bindcolumnchange="$StartTime$changeDateTimeColumn">
            <view class="tui-picker-detail" style="background:{{$StartTime$timeObj.isChecked?'#dfdfdf':''}}">
                 {{$StartTime$dateData[0]+'/'+$StartTime$dateData[1]+'/'+$StartTime$dateData[2]+' '+$StartTime$dateData[3]+':'+$StartTime$dateData[4]+':'+$StartTime$dateData[5]}}
                 <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
    </view>

            
    <view class="tui-picker-content">
        <view>{{$EndTime$timeObj.title}}</view>
        <picker mode="multiSelector" value="{{$EndTime$dateTime}}" bindchange="$EndTime$changeDateTime" range="{{$EndTime$dateTimeArray}}" name="{{$EndTime$timeObj.name}}" bindcolumnchange="$EndTime$changeDateTimeColumn">
            <view class="tui-picker-detail">
                  {{$EndTime$dateData[0]+'/'+$EndTime$dateData[1]+'/'+$EndTime$dateData[2]+' '+$EndTime$dateData[3]+':'+$EndTime$dateData[4]+':'+$EndTime$dateData[5]}}
                 <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
    </view>

            <view class="option">
                <view>
                    <text>情景</text>
                </view>
                <picker bindchange="bindPickerChange" value="{{situationCombobox.index}}" range="{{situationCombobox.displayText}}" name="Category" data-wpybindpickerchange-a="situationCombobox">
                    <view class="picker">
                        <view>
                            <text>{{situationCombobox.displayText[situationCombobox.index]}}</text>
                        </view>
                        <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                    </view>
                </picker>
            </view>
            <view class="option">
                <view>
                    <text>优先级</text>
                </view>
                <picker bindchange="bindPickerChange" value="{{priorityCombobox.index}}" range="{{priorityCombobox.displayText}}" name="Category" data-wpybindpickerchange-a="priorityCombobox">
                    <view class="picker">
                        <view>
                            <text>{{priorityCombobox.displayText[priorityCombobox.index]}}</text>
                        </view>
                        <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                    </view>
                </picker>
            </view>
            <view class="checked">
                <view>
                    <checkbox value="{{IsMarkPrivacy[0].checked}}" id="Privacy" checked="{{IsMarkPrivacy[0].checked}}" bindtap="isChecked" color="#5d73fa"/>{{IsMarkPrivacy[0].title}}
                </view>
                <view>
                    <checkbox id="IsMark" value="{{IsMarkPrivacy[1].checked}}" checked="{{IsMarkPrivacy[1].checked}}" bindtap="isChecked" color="#5d73fa"/>{{IsMarkPrivacy[1].title}}
                </view>
            </view>
            <view class="IsRemind" style="margin-top:{{isRemindTime?'0':'20rpx'}}">
                <checkbox value="" checked="{{IsRemindChecked}}" bindtap="IsRemind" color="#5d73fa"/>是否提醒
                
    <view class="option" wx:if="{{isRemindTime}}">
        <view>
            <text class="title">{{$RemindTime$options.title}}</text>
        </view>
        <picker bindchange="$RemindTime$bindPickerChange" value="{{$RemindTime$index}}" range="{{$RemindTime$options.displayText}}" name="{{$RemindTime$options.name}}">
            <view class="picker">
                <view>
                    <text>{{$RemindTime$options.displayText[$RemindTime$index]||'请选择'}}</text>
                </view>
                <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
            </view>
        </picker>
         <view  wx:if="{{$RemindTime$options.warning}}" style="color:#e20000">
                <text>此字段是必填字段</text>
        </view>
    </view>

            </view>
            <view class="option">
                <view>
                    <text>隐私范围</text>
                </view>
                <picker bindchange="bindPickerChange" value="{{privacyCombobox.index}}" range="{{privacyCombobox.displayText}}" name="Category" data-wpybindpickerchange-a="privacyCombobox">
                    <view class="picker">
                        <view>
                            <text>{{privacyCombobox.displayText[privacyCombobox.index]}}</text>
                        </view>
                        <icon class="updown iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2"/>
                    </view>
                </picker>
            </view>
            <view class="Tag">
                <view>
                    <text>日程标签</text>
                </view>
                <view>
                    <view class="tagInput" style="display:flex;flex-wrap: wrap;align-items:center;">
                        <block wx:for="{{Tag.TagItem}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                            <view class="tag-item">
                                <text>{{item}}</text>
                                <icon class="iconfont icon-zirenwushanchu1" style="font-size:48rpx" catchtap="deleteTagItem" data-wpydeletetagitem-a="{{index}}"/>
                            </view>
                        </block>
                        <input name="{{Tag.name}}" value="{{TagValue}}" bindconfirm="tagBindconfirm" bindinput="tagBindinput"/>
                    </view>
                </view>
            </view>
            <image src="../../../images/test.png" mode="scaleToFill" lazy-load="true" class="addImage" style="opacity:{{addOpacity}} ;" bindtouchstart="touchStart" bindtouchend="touchEnd"/>
        </view>
    </view>