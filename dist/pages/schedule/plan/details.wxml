
    <view class="plan">
        <view class="container-title">
            <text class="title-text">日程详情</text>
        </view>
        <view class="plan_box">
            <view class="plan_line">
                <text class="plan_name">{{planLogData.employeeName}}（所属人）</text>
                <text class="plan_yellow plan_right plan_state">{{planLogData.statusText}}</text>
            </view>
            <view class="plan_line">
                <text class="plan_gray plan_work">工作｜{{planLogData.eventTypeText}} <text class="plan_address"> {{planLogData.situationText}}</text></text>
                <text class="plan_right plan_situation">{{planLogData.title}}</text>
            </view>
            <view class="plan_line">
                <text class="plan_gray plan_time">时间：{{planLogData.startTime}}至{{planLogData.startTime}}</text>
                <text class="plan_yellow plan_right plan_haveTime">8h</text>
            </view>
            <view class="plan_line">
                <text class="plan_red plan_ifImportant">{{planLogData.priorityText}} </text>
                <text class="plan_right plan_remind">{{planLogData.remindTime}}分钟前提醒</text>
            </view>
        </view>
        <view class="plan_footer">
        </view>
        <view class="plan_box">
            <view class="plan_content">
                <view class="plan_title">
                    <text>日程描述</text>
                </view>
                <view>
                    <text>{{planLogData.description}}</text>
                </view>
            </view>
            <view class="plan_content"  wx:if="{{planLogData.remark}}">
                <view class="plan_title">
                    <text>备注</text>
                </view>
                <view>
                    <text>{{planLogData.remark}}</text>
                </view>
            </view>
            <view class="plan_label"  wx:if="{{planLogData.tag}}">
                <icon wx:if="{{planLogData.tag[0]!=''}}" class="iconfont icon-biaoqian" style="font-size:21px;color:#5d73fa;margin-right:10rpx"/>
                <block wx:for="{{planLogData.tag}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                    <text wx:if="{{planLogData.tag[0]!=''}}">{{item}}</text>
                </block>
            </view>
            <view class="plan_content" wx:if="{{planLogData.address}}" style="margin-top:10rpx">
                <icon class="iconfont icon-dizhi" style="font-size:21px;color:#5d73fa;margin-right:10rpx"/>
                <text>{{planLogData.address}}</text>
            </view>
        </view>
        <view class="plan_footer">
        </view>
        <view class="plan_box">
            <view class="plan_content">
                <view class="plan_title">
                    <text>关联项目信息</text>
                </view>
                <view>
                    <view class="plan_relation" wx:if="{{planLogData.caseName}}">案件名称：<text class="plan_relationDetail">{{planLogData.caseName}}</text></view>
                    <view class="plan_relation" wx:if="{{planLogData.clientName}}">客户名称：<text class="plan_relationDetail">{{planLogData.clientName}}</text></view>
                </view>
            </view>
        </view>
        <view class="plan_footer" wx:if="{{planLogData.participantList.length!==0}}"/>
        <view class="plan_box" wx:if="{{planLogData.participantList.length!==0}}">
            <view class="plan_title" style="margin-bottom:30rpx">
                <text>会议参与人</text>
            </view>
            <view>
                <view style="display:flex;line-height:60rpx">
                    <view style="color:#069400;margin-right:20rpx;">
                        <text>已确认</text>
                    </view>
                    <block wx:for="{{planLogData.participantList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view class="participant" wx:if="{{item.status=='A'}}">
                            <image src="{{item.employeeAvatar}}" mode="scaleToFill" lazy-load="false"/>
                        </view>
                    </block>
                </view>
                <view>
                    <view style="color:#ff9900;margin-right:20rpx;">
                        <text>待确认</text>
                    </view>
                    <block wx:for="{{planLogData.participantList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view class="participant" wx:if="{{item.status=='N'}}">
                            <image src="{{item.employeeAvatar}}" mode="scaleToFill" lazy-load="false"/>
                        </view>
                    </block>
                </view>
            </view>
        </view>
        <view class="plan_footer" wx:if="{{planLogData.attachmentList.length!==0}}"/>
        <view class="plan_box" wx:if="{{planLogData.attachmentList.length!==0}}">
            <view class="plan_content">
                <view class="plan_title">
                    <text>日程附件</text>
                </view>
                <view>
                    <block wx:for="{{planLogData.attachmentList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view class="item-container" bindtap="preview" data-wpypreview-a="{{item.id}}" data-wpypreview-b="{{item.extension}}">
                            <view class="icon-content">
                                <icon class="iconfont {{item.icon.icon}}" style="font-size:60rpx; color:{{item.icon.color}}"/>
                            </view>
                            <view class="right-item">
                                <text style="color:#2a2a2a">{{item.name||'未填写'}}</text>
                            </view>
                        </view>
                    </block>
                </view>
            </view>
        </view>
    </view>