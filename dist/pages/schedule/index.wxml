
    <view class="container" bindtouchstart="handletouchtart" bindtouchmove="handletouchmove">
        <view class="calendar">
            <view class="calendar_content">
                <picker mode="date" fields="month" bindchange="bindDateChange" start="{{startDate}}" end="{{endDate}}" value="{{nowDate_Year}}-{{nowDate_Month}}" style="width: 35%;">
                    <view class="picker">
                        <view class="date-year">{{nowDate_Year}}</view>
                        <view class="date-mouth">
                            <text>{{mouthCh}}月</text>
                            <icon class="iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;margin-left:8rpx"/>
                        </view>
                    </view>
                </picker>
                <view class="date_header">
                    <block wx:for="{{date}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                        <view>{{item}}</view>
                    </block>
                </view>
                <view class="date-boxs {{ifDateSmall?'animation':''}}"  wx:if="{{ifDateSmall}}">
                    <view class="date-box">
                        <block wx:for="{{dateArrSmall}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                            <view class="date-head">
                                <view class="{{isToday == item.isToday ? 'nowDay' : item.hasData ? 'hasDay' : ''}}" catchtap="getToday" data-wpygettoday-a="{{item.isToday}}">
                                    {{item.dateNum}}
                                </view>
                            </view>
                        </block>
                    </view>
                </view>
                <view class="date-boxs {{!ifDateSmall?'animation':''}}"  wx:else="{{ifDateSmall}}">
                    <swiper circular="{{circular}}" bindchange="handletouchtartX" bindanimationfinish="handletouchendX" bindtransition="handletouchmoveX">
                        <swiper-item class="date-box">
                            <block wx:for="{{dateArr}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="date-head" catchtap="getToday" bindtap="getToday" data-wpygettoday-a="{{item.isToday}}">
                                    <view class="{{isToday == item.isToday ? 'nowDay' : item.hasData ? 'hasDay' : ''}}">{{item.dateNum}}</view>
                                </view>
                            </block>
                        </swiper-item>
                        <swiper-item class="date-box">
                            <block wx:for="{{dateArr}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="date-head" catchtap="getToday" bindtap="getToday" data-wpygettoday-a="{{item.isToday}}">
                                    <view class="{{isToday == item.isToday ? 'nowDay' : item.hasData ? 'hasDay' : ''}}">{{item.dateNum}}</view>
                                </view>
                            </block>
                        </swiper-item>
                    </swiper>
                </view>
            </view>
            <image class="imgage" src="../../images/date.jpg" mode="aspectFill" lazy-load="false" style="width:100%; height:{{viewHeight}}px"/>
        </view>
        <view class="list-content" style=" height: {{listHeight}}px">
            <view class="fixed-navbars">
                
    <view class="navbar">
        <scroll-view scroll-x>
            <block wx:for="{{$navbar$navbars}}" wx:for-index="$navbar$index" wx:for-item="$navbar$item" wx:key="$navbar$index">
                <view class="item {{$navbar$currentTab == $navbar$index ? 'active' : ''}} " bindtap="$navbar$navbarTap" data-wpynavbartap-a="{{$navbar$index}}">
                    <text>{{$navbar$item}}</text>
                    <view  wx:if="{{$navbar$currentTab == $navbar$index}}" class="navbar_box"/>
                </view>
            </block>
        </scroll-view>
    </view>

                <view class="time" id="time">
                    <text>{{isToday}}</text>
                </view>
            </view>
            <scroll-view scroll-y="{{true}}" style="height:100%">
                <view class="schedule_boxs" style="height:{{heightH}}px;overflow-y:scroll">
                    <!-- 任务 -->
                    <view style="margin-bottom:200rpx" hidden="{{currentTab==0?'':true}}">
                        <view class="schedule_box">
                            <block wx:for="{{taskData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="schedule_content">
                                    <view class="task-content-container taskHeight">
                                        <view class="task-content" bindtap="intoDetails" data-wpyintodetails-a="task" data-wpyintodetails-b="{{item.id}}">
                                            <view style="margin-right:30rpx"  wx:if="{{item.isParticipant=='Y'&&item.isAccept=='Y'}}">
                                                <checkbox value="{{item.title}}" catchtap="isCompleted" checked="{{items.checked[index]}}" color="#5d73fa" data-wpyiscompleted-a="{{taskDataIndex}}" data-wpyiscompleted-b="{{index}}" data-wpyiscompleted-c="{{items.checked[index]}}"/>
                                            </view>
                                            <view class="task-content-right {{items.checked[index]==true?'loseColor':''}}" style="width:{{item.isParticipant=='Y'&&item.isAccept=='Y'?'86%':'100%'}}">
                                                <view class="task-content-right-top">
                                                    <text>{{item.title}}</text>
                                                </view>
                                                <view class="task-content-right-bottom">
                                                    <view class="bottom-left">
                                                        <icon class="iconfont icon-riqi" style="font-size:30rpx;color:#7a7a7a"/>
                                                        <text style="color:{{items.checked[index]==true?'#f4f4f4':'#7a7a7a'}}">111</text>
                                                    </view>
                                                    <view class="bottom-right">
                                                        <icon class="iconfont icon-fujian-copy" style="font-size:30rpx;color:#009DFF"/>
                                                        <text>{{item.attachmentCount}}</text>
                                                        <icon class="iconfont icon-zirenwu-copy" style="font-size:30rpx;color:#5D73FA;margin-left:20rpx"/>
                                                        <text>{{item.checkItemCount}}</text>
                                                    </view>
                                                </view>
                                            </view>
                                        </view>
                                    </view>
                                </view>
                            </block>
                        </view>
                        <!-- <image src="{{'../../../images/add.png'}}" mode="scaleToFill" lazy-load="true" class="addImage" bindtap="intoAdd(task)"></image> -->
                    </view>
                    <!-- 日程 -->
                    <view style="margin-bottom:200rpx" hidden="{{currentTab==1?'':true}}">
                        <view class="schedule_box">
                            <block wx:for="{{planData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="schedule_content">
                                    <view class="plan" bindtap="intoDetails" data-wpyintodetails-a="plan" data-wpyintodetails-b="{{item.id}}">
                                        <view class="plan_left">
                                            <text class="plan_timeFirst">{{item.start}}</text>
                                            <text class="plan_timeLast">{{item.end}}</text>
                                        </view>
                                        <view class="plan_right">
                                            <view class="plan_firstLine">
                                                <text>{{item.title}}</text> <text class="ifwait {{false?'green':'yellow'}}">{{item.statusText}}</text>
                                            </view>
                                            <view class="plan_lastLine"> <text>{{item.clientName}}</text> <text class="ifwait">工作｜{{item.eventTypeText}}</text></view>
                                        </view>
                                    </view>
                                </view>
                            </block>
                        </view>
                        <!-- <image src="{{addImage}}"  mode="scaleToFill" lazy-load="false" class="addImage" bindtap="intoAdd('plan')"></image> -->
                    </view>
                    <!-- 日志 -->
                    <view style="margin-bottom:200rpx" hidden="{{currentTab==2?'':true}}">
                        <view class="schedule_box">
                            <block wx:for="{{journalData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="schedule_content">
                                    <view class="journal" bindtap="intoDetails" data-wpyintodetails-a="journal" data-wpyintodetails-b="{{item.id}}">
                                        <view class="journal_box">
                                            <text class="journal_timeFirst">{{item.start}}</text>
                                            <text class="journal_timeLast">{{item.selfDuration}}h</text>
                                        </view>
                                        <view class="journal_box">
                                            <text class="journal_content">{{item.description}}</text>
                                        </view>
                                        <view class="journal_box">
                                            <text class="journal_name">{{item.employeeName}}</text>
                                            <text class="journal_state">{{item.processStatusText}}</text>
                                        </view>
                                    </view>
                                </view>
                            </block>
                        </view>
                        <!-- <image src="{{addImage}}"  mode="scaleToFill" lazy-load="true" class="addImage" bindtap="intoAdd(journal)"></image> -->
                    </view>
                    <!-- 开庭 -->
                    <view style="margin-bottom:200rpx" hidden="{{currentTab==3?'':true}}">
                        <view class="schedule_box">
                            <block wx:for="{{courtData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="schedule_content">
                                    <view class="court-info-container">
                                        <view class="court-item1">
                                            <view class="item1-left">
                                                <icon class="iconfont icon-fayuankaiting"/>
                                                <text>{{item.courtText}}</text>
                                            </view>
                                            <view class="item1-right">
                                                <icon class="iconfont icon-gengduoneirongdianjichakanxiangqing" style="font-size:30rpx;color:#b2b2b2" bindtap="courtShow" data-wpycourtshow-a="{{index}}"/>
                                            </view>
                                        </view>
                                        <view class="court-item1">
                                            <view class="item1-left">
                                                <icon class="iconfont icon-tixingkaiting"/>
                                                <text>提前{{item.warningTime}}天提醒 @{{item.warningLawyerName}}</text>
                                            </view>
                                            <view class="item1-right" style="display:flex;align-items:center">
                                                <text style="width:30rpx;height:30rpx;border-radius:50%;background:{{item.singleColor}};margin-right:20rpx"/>
                                                <text style="color:#7a7a7a">{{item.categoryText}}</text>
                                            </view>
                                        </view>
                                        <view class="court-item1">
                                            <view class="item1-left">
                                                <icon class="iconfont icon-riqi"/>
                                                <text>{{item.start}} 至 {{item.end}}</text>
                                            </view>
                                        </view>
                                        <view class="court-item1">
                                            <view class="item1-left">
                                                <icon class="iconfont icon-dizhi1"/>
                                                <text>{{item.address}}</text>
                                            </view>
                                        </view>
                                        <view class="info-item">
                                            <view class="fayuan" style="width:100%;">
                                                <text>法院</text>
                                                <text>{{item.courtText}}</text>
                                            </view>
                                            <view>
                                                <text>主审法官／指定仲裁员</text>
                                                <text>{{item.courtPerson}}</text>
                                            </view>
                                            <view>
                                                <text>法院简称</text>
                                                <text>{{item.memo}}</text>
                                            </view>
                                            <view>
                                                <text>座机</text>
                                                <text>{{item.telPhone}}</text>
                                            </view>
                                            <view>
                                                <text>手机号码</text>
                                                <text>{{item.cellPhone}}</text>
                                            </view>
                                            <view style="width:100%">
                                                <text>备注</text>
                                                <text>{{item.remark}}</text>
                                            </view>
                                        </view>
                                    </view>
                                </view>
                            </block>
                        </view>
                        <!-- <image src="{{'../../../images/add.png'}}" mode="scaleToFill" lazy-load="true" class="addImage" bindtap="intoAdd(count)"></image> -->
                    </view>
                    <!-- 议会 -->
                    <view style="margin-bottom:200rpx" hidden="{{currentTab==4?'':true}}">
                        <view class="schedule_box">
                            <block wx:for="{{meetingData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="schedule_content">
                                    <view class="meeting" bindtap="intoDetails" data-wpyintodetails-a="meeting" data-wpyintodetails-b="{{item.id}}">
                                        <view class="meeting_box">
                                            <text class="meeting_name">{{item.title}}</text>
                                            <text class="meeting_ifTrue">{{item.statusText}}</text>
                                        </view>
                                        <view class="meeting_box">
                                            <text class="meeting_time">会议时间：{{item.start}}至{{item.end}}</text>
                                        </view>
                                        <view class="meeting_box">
                                            <text class="meeting_content">{{item.description}}</text>
                                        </view>
                                        <view class="meeting_box">
                                            <text class="meeting_timeFirst">必智会议室</text>
                                            <text class="meeting_timeLast">主持人：{{item.employeeName}}</text>
                                        </view>
                                    </view>
                                </view>
                            </block>
                        </view>
                        <!-- <image src="{{addImage}}"  mode="scaleToFill" lazy-load="true" class="addImage" bindtap="intoAdd(meeting)"></image> -->
                    </view>
                    <!-- 请假 -->
                    <view style="margin-bottom:200rpx" hidden="{{currentTab==5?'':true}}">
                        <view class="schedule_box">
                            <block wx:for="{{leaveData}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                                <view class="schedule_content">
                                    <view class="leave" bindtap="intoDetails" data-wpyintodetails-a="leave" data-wpyintodetails-b="{{item.id}}">
                                        <view class="leave_box">
                                            <text class="leave_name">{{item.eName}}<text class="leave_add">｜{{item.eCategory}}</text></text>
                                            <text class="leave_time">{{item.totalDay}}天</text>
                                        </view>
                                        <view class="leave_box">
                                            <text class="leave_period">请假时间：{{item.start}}至{{item.end}}</text>
                                        </view>
                                        <view class="leave_box">
                                            <text class="leave_content">{{item.description}}</text>
                                        </view>
                                        <view class="leave_box">
                                            <text class="leave_timeFirst">{{item.tag}}</text>
                                            <text class="leave_timeLast {{item.status=='W'?'leave_yellow':item.status=='A'?'leave_green':'leave_red'}}"><view class="leave_color "><view class="caseConflictBorder_radius"/></view>{{item.statusText}}</text>
                                        </view>
                                    </view>
                                </view>
                            </block>
                        </view>
                    </view>
                </view>
            </scroll-view>
        </view>
        <image src="{{addImage}}" mode="scaleToFill" wx-if="{{isAddImage}}" lazy-load="true" class="addImage" catchtap="intoAdd"/>
    </view>