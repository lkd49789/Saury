.container {
  height: 100%;
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0rpx;
  left: 0;
  right: 0;
  bottom: 0;
}
.container .icon {
  position: absolute;
  top: 150rpx;
}
.container > view:last-child {
  width: 80%;
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 180rpx;
}
.container > view:last-child .wx {
  height: 100%;
  width: 100%;
  color: #fff;
  margin-bottom: 30rpx;
}
.container > view:last-child .wx > button {
  width: 100%;
  color: #fff;
  border-radius: 0;
  font-size: 32rpx;
}
.container > view:last-child .lzh {
  height: 100%;
  width: 100%;
  margin-bottom: 30rpx;
}
.container > view:last-child .lzh .lzhLogin {
  background: #fff;
  width: 100%;
  font-size: 32rpx;
  border-radius: 0;
}
.container > view:last-child .lzh .lzhLogin::after {
  border-radius: 0;
}
