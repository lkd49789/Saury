
  <view class="body" style="">
    <image src="{{loginImage}}" mode="scaleToFill" lazy-load="true">
    </image>
    <view>
      <view class="logo-container">
        <view class="bc-gd">
          <icon class="logo iconfont icon-ailogo" style="font-size:118rpx; color:#5d73fa"/>
        </view>
      </view>
      <view class="login-box">
        <form bindsubmit="formSubmit" bindreset="formReset">
          <!-- <view class="login-top"> -->
          <!-- <image class="text-logo" src="../../images/text-logo.png"></image> -->
          <view class="domain">
            <input class="input" placeholder="律所标识" placeholder-class="color" type="text" name="domain" value=""/>
          </view>
          <view class="username">
            <input class="input" placeholder="用户名或邮箱地址" placeholder-class="color" type="text" name="username" value=""/>
          </view>
          <view class="password">
            <input class="input" placeholder="密码" placeholder-class="color" type="password" name="password" value=""/>
          </view>
          <!-- </view> -->
          <view class="hint">
            <text class="hint-msg"  wx:if="{{err}}">您输入的密码有误!</text>
          </view>
          <view class="login-bottom">
            <view class="forgate">
              <text style="color:#5d73fa" bindtap="toforgate">忘记密码？</text>
            </view>
            <button formType="submit" class="btn-register btn-text">登录</button>
          </view>
        </form>
      </view>
    </view>
  </view>