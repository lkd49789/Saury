.body {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}
.body > image {
  height: 100%;
  width: 100%;
}
.body > view {
  position: absolute;
}
.body .logo-container {
  margin-top: -50rpx;
  margin-bottom: 80rpx;
}
.body .logo-container .bc-gd {
  width: 176rpx;
  height: 176rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.35);
  position: relative;
  margin: 0 auto;
}
.body .logo-container .bc-gd .logo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.body .login-box {
  padding: 30rpx 64rpx 64rpx 64rpx;
  box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.35);
  border-radius: 20rpx;
  background: #fff;
  width: 488rpx;
  margin: auto;
}
.body .login-box .domain {
  margin-top: 43rpx;
}
.body .login-box .username {
  margin-top: 70rpx;
  height: 100rpx;
}
.body .login-box .password {
  margin-top: 70rpx;
}
.body .login-box .hint {
  height: 50rpx;
  font-size: 26rpx;
  color: #e20000;
  flex-direction: row;
  width: 100%;
}
.body .login-box .hint .text-logo {
  height: 60rpx;
  width: 198rpx;
}
.body .login-box .login-bottom {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  align-items: center;
  position: relative;
}
.body .login-box .login-bottom .forgate {
  width: 100%;
}
.body .login-box .login-bottom .forgate > text {
  float: right;
}
.body .login-box .login-bottom .btn-register {
  height: 86rpx;
  width: 350rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  margin-top: 125rpx;
  background: #5d73fa;
  box-shadow: 0px 8px 30px rgba(65, 98, 213, 0.25);
  line-height: 86rpx;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
  border-bottom-left-radius: 20px;
}
.body .login-box .login-bottom .btn-text {
  color: #fff;
  width: 100%;
  display: inline-block;
  text-align: center;
}
.body .login-box .input {
  border-bottom: 1px solid #bfbfbf;
  padding-bottom: 36rpx;
  color: #2a2a2a;
}
.body .login-box .color {
  color: #b2b2b2;
  font-size: 28rpx;
}
.third {
  width: 100%;
  height: 100%;
  position: relative;
}
.border-left {
  border-top: 1px solid #dedede;
  width: 35%;
}
.border-right {
  border-top: 1px solid #dedede;
  width: 35%;
  float: right;
}
.text-hint {
  font-size: 28rpx;
  color: #b2b2b2;
  display: inline-block;
  padding: 0 20rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -50%);
}
.thrid-logo {
  margin-top: 44rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.icon-logo {
  margin: 0 auto;
}
.QQ,
.wechat,
.weibo,
.twiter {
  height: 90rpx;
  width: 90rpx;
}
