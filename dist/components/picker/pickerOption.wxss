.option {
  margin-bottom: 36rpx;
}
.option picker {
  padding: 20rpx 0;
  border-bottom: 1px solid #dfdfdf;
}
.option picker .picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #7a7a7a;
}
.option picker .picker .part-item {
  position: relative;
  margin: 10rpx;
  background: #dfdfdf;
  padding: 5rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.option picker .picker .part-item > icon {
  position: absolute;
  bottom: 31rpx;
  right: -12rpx;
}
