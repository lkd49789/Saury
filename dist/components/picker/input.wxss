.input {
  margin-bottom: 36rpx;
}
.input view:first-child {
  color: #2a2a2a;
}
.input .input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 28rpx 0;
}
.input .input-container > input {
  width: 100%;
}
.textarea {
  margin-bottom: 36rpx;
}
.textarea view:first-child {
  color: #2a2a2a;
}
.textarea .textarea-container {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 28rpx 0;
}
.textarea .textarea-container > textarea {
  width: 100%;
}
