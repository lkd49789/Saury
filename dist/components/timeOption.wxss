.border-bottom-focus {
  border-bottom: 1px solid #5d73fa;
}
.border-bottom-blur {
  border-bottom: 1px solid #bfbfbf;
}
.option {
  position: relative;
  font-size: 28rpx;
}
.option .title {
  font-size: 26rpx;
}
.option .title-container {
  margin-bottom: 14rpx;
}
.option .show .picker {
  display: flex;
  justify-content: space-between;
}
.option .picker {
  padding-bottom: 8rpx;
}
.option .updown {
  font-size: 28rpx;
  position: absolute;
  right: 12rpx;
  top: -5rpx;
}
.option1 {
  font-size: 28rpx;
  color: #7a7a7a;
  position: relative;
  height: 130rpx;
}
.option1 .show1 {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  width: 100%;
}
.option1 .show1 .title1-container {
  font-size: 26rpx;
  margin-bottom: 14rpx;
}
.option1 .show1 .picker1 {
  font-size: 28rpx;
  padding-bottom: 8rpx;
  display: flex;
  justify-content: space-between;
}
.option1 .show1 .updown1-container {
  position: absolute;
  right: 0;
}
.option1 .show1 .updown1-container .updown1 {
  font-size: 28rpx;
  position: absolute;
  right: 12rpx;
  top: -15rpx;
}
